@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.ApprovalItem
@(Html.X().Window()
    .Header(false)
    .Height(1)
    .Maximized(true)
    .Constrain(true)
    .Layout(LayoutType.Fit)
    .Modal(true)
    .Resizable(false)
    .BodyPadding(0)
    .Border(false)
    .Items(
            Html.X()
                .FormPanel()
                .Layout(LayoutType.Border)
                .Items(
                    Html.X().Container()
                        .Layout(LayoutType.Fit)
                        .Region(Region.Center)
                        .Margin(1)
                        .ItemsFromSection(this, "SectionApproval"),
                    Html.X().ApprovalPanelFor(m=>m)
                )
    )
    .Buttons(
        Html.X().Button().Hidden(Model.IsEdit)
                .Icon(Icon.PageEdit)
                .Text("Phê duyệt")
                .Handler("onApproval(this.up('window'))"),
        Html.X().Button().Hidden(!Model.IsEdit)
                .Icon(Icon.PageGo)
                .Text("Gửi duyệt")
                .Handler("onSendApproval(this.up('window'))"),
        Html.X().Button()
                .Icon(Icon.DoorOut)
                .Text("Thoát")
                .Handler("this.up('window').close();")
            )
)
<script>
    function onApproval(window) {
        var form = window.down('form');
        if (checkFormValid(form)) {
            approval(form);
            window.close();  
        }
    };
    function onSendApproval(window) {
        var form = window.down('form');
        if (checkFormValid(form)) {
            sendApproval(form);
            window.close();
        }
    };
    function checkFormValid(form) {
        if (!form.isValid()) {
            Ext.MessageBox.show({
                title: 'Thông báo', msg: 'Chưa nhập đủ các thông tin cần nhập!',
                buttons: { yes: 'Đồng ý' }, iconCls: '#Exclamation'
            });
            return false;
        }
        return true;
    };
</script>

