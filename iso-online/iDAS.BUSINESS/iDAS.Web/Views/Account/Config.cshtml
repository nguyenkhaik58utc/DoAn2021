@using Ext.Net;
@using Ext.Net.MVC;
@model iDAS.Core.Database
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .setup .x-btn-inner {
        color: white;
    }
</style>
@(Html.X().Viewport()
    .Layout(LayoutType.Border)
    .AutoScroll(true)
    .MinWidth(1080)
    .MinHeight(350)
    .Items(
        //Header
        Html.X().Panel()
            .Region(Region.North)
            .Height(50)
            .Margin(0)
            .Header(false)
            .Border(false)
            .Layout(LayoutType.HBox)
            .BodyStyle("background-color:#dfe8f6;")
            .Items(
                Html.X().Image().ImageUrl("~/Content/themes/login/iDAS-logo.png")
                    .Width(87).Height(35).Border(false)
                    .MarginSpec("6 0 0 50"),
                Html.X().Label().Text("HỆ THỐNG NÂNG CAO NĂNG SUẤT CHẤT LƯỢNG VÀ TÍCH HỢP CÁC TIÊU CHUẨN ISO")
                    .StyleSpec("margin-left:50px;line-height: 48px; font-size: 18px;font-weight: bold;color: #415ca5;font-family: Cambria, Times New Roman, Tahoma;")
            ),
        //Content
        Html.X().Panel()
            .Layout(LayoutType.Border)
            .Region(Region.Center)
            .BodyStyle("background: #4c6ec7;")
            .Items(
                Html.X().Image().ImageUrl("~/Content/themes/login/idas-kit.png")
                    .Region(Region.West)
                    .PaddingSpec("50 50 50 100"),
                Html.X().Container().Region(Region.East)
                    .PaddingSpec("0 300 0 0")
                    .Border(false)
                    .Items(
                        Html.X().FormPanelForModel()
                            .ID("Form1")
                            .Url("Config")
                            .Frame(true)
                            .FieldDefaults(fs =>
                            {
                                fs.LabelSeparator = ""; fs.LabelWidth = 130;
                                fs.LabelStyle = @"color: white;font-size: 10pt;font-family: Tahoma;";
                            })
                            .Listeners(ls =>
                            {
                                ls.AfterLayout.Handler = "this.center();";
                            })
                            .Width(420)
                            .Layout(LayoutType.Form)
                            .Border(false)
                            .Padding(0)
                            .Margin(0)
                            .BodyPaddingSummary("15 20 15 30")
                            .BodyStyle("background: #32467f;")
                            .BottomBar(
                                Html.X().Toolbar().Padding(0).Margin(5).StyleSpec("background: rgba(0, 0, 0, 0);").Items(
                                    Html.X().DisplayField().Text("Thiết lập thông số Database hệ thống").MarginSpec("0 0 0 25"),
                                    Html.X().ToolbarFill(),
                                    Html.X().Button().Height(27).Cls("setup").Text("Thiết lập").StyleSpec("background: #9e2c23;").MarginSpec("0 15 0 0")
                                        .Handler("App.Form1.submit({ waitMsg: 'Đang thực hiện ....' })")
                                )
                            )
                    )
            ),
        //Footer
        Html.X().Toolbar()
            .Region(Region.South)
            .Height(40)
            .Margin(0)
            .Border(false)
            .Layout(LayoutType.HBox)
            .StyleSpec("background-color:#dfe8f6;")
            .Items(
                Html.X().HyperLink().MarginSpec("10 0 0 10").Text("Copyright © 2020 DAS-TECHNOLOGY Ltd. All rights reserved").NavigateUrl("http://www.idasonline.com").Target("_blank"),
                Html.X().ToolbarSeparator().MarginSpec("13 5 0 5"),
                Html.X().HyperLink().MarginSpec("10 0 0 0").Text("Liên hệ với chúng tôi").NavigateUrl("http://www.idasonline.com").Target("_blank"),
                Html.X().ToolbarSeparator().MarginSpec("13 5 0 5"),
                Html.X().HyperLink().MarginSpec("10 0 0 0").Text("Chính sách bảo mật").NavigateUrl("http://www.idasonline.com").Target("_blank"),
                Html.X().ToolbarSeparator().MarginSpec("13 5 0 5"),
                Html.X().HyperLink().MarginSpec("10 0 0 0").Text("Điều khoản sử dụng").NavigateUrl("http://www.idasonline.com").Target("_blank")
            )
    )
)