                                .FieldLabel("Năm")
                                .Editable(false)
                                .ValueField("ID")
                                .Listeners(l => l.Select.Handler = "App.dfFromDate.setValue(new Date(App.Year.getValue(), 0, 1)); App.dfToDate.setValue(new Date(App.Year.getValue(), 11, 31)); App.gpOutwardByVouchers.getStore().load();")
