                                       Html.X().DateField()
                                               .FieldLabel("Đến")
                                               .LabelWidth(50)
                                               .ID("dfToDate")
                                                .Listeners(l =>
                                                   {
                                                       l.Select.Handler = "App.gpOutwardByVouchers.getStore().load();";
                                                       l.SpecialKey.Fn = "onSpecialKey";
                                                   })
