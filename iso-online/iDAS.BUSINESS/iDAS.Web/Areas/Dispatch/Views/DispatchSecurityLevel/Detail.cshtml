@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.DispatchSecurityItem
@(
 Html.X().Window()
    .ID("winDetailSercurity")
    .Title("Xem chi tiết mức độ bảo mật của công văn")
    .Icon(Icon.Zoom)
    .Width(600)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .Layout(LayoutType.Form)
            .StyleSpec("border: none;")
            .Border(false)
            .Frame(true)
            .FieldDefaults(f => f.ReadOnly = true)
            .ID("frmDetailSercuritye")
            .Items(
                Html.X().Container().Layout(LayoutType.Column).Items(
                Html.X().TextFieldFor(m => m.Name)
                        .FieldLabel("Mức độ bảo mật")
                        .ColumnWidth(0.5),
                Html.X().TextFieldFor(m => m.Color)
                        .ColumnWidth(0.5)
                        .FieldLabel("Màu sắc").FieldStyle("background:" + Model.Color)
                        .LabelWidth(70)
                        .MarginSpec("0 0 0 10")
                    ),
                Html.X().CheckboxFor(m => m.IsActive)
                        .FieldLabel("Kích hoạt"),
                Html.X().TextAreaFor(m => m.Note)
                    .ID("txtContent")
                    .FieldLabel("Ghi chú")
                    .TabIndex(3).Height(100)
                    .MaxLength(1000),
                Html.X().Container().Layout(LayoutType.Column).Items(
                Html.X().DateFieldFor(m => m.CreateAt)
                        .ID("dtCreateAt")
                        .FieldLabel("Ngày tạo")
                        .ColumnWidth(0.5)
                        .TabIndex(5)
                        .Format("dd/MM/yyyy"),
                Html.X().TextFieldFor(m => m.CreateName).ID("txtCreateByName")
                        .FieldLabel("Người tạo").ColumnWidth(0.5).MarginSpec("0 0 0 10")
                        .TabIndex(5)
                        .LabelWidth(70)
                ),
                Html.X().Container().Layout(LayoutType.Column).Items(
                Html.X().DateFieldFor(m => m.UpdateAt)
                        .ID("dtUpdateAt")
                        .FieldLabel("Ngày sửa")
                        .ColumnWidth(0.5)
                        .TabIndex(5)
                        .Format("dd/MM/yyyy"),
                Html.X().TextFieldFor(m => m.UpdateName).ID("txtUpdateByName")
                        .FieldLabel("Người sửa").ColumnWidth(0.5).MarginSpec("0 0 0 10")
                        .TabIndex(5)
                        .LabelWidth(70)
                     )
                )
        )
        .Buttons(
            Html.X().ButtonExit()
        )
)
