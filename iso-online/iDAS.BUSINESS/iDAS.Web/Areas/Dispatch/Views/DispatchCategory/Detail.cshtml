@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@model iDAS.Items.DispatchCategoryItem
@(
 Html.X().Window()
    .ID("winDetailMethod")
    .Title("Xem chi tiết nhóm Công văn")
    .Icon(Icon.Zoom)
    .Width(600)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .Layout(LayoutType.Form)
            .StyleSpec("border: none;")
            .Border(false)
            .Frame(true)
            .FieldDefaults(f=> f.ReadOnly=true)
            .ID("frmDetailSercuritye")
            .Items(
                Html.X().TextFieldFor(m => m.Name)
                    .FieldLabel("Tên nhóm" ),
                Html.X().TextAreaFor(m => m.Note)
                    .ID("txtContent")
                    .FieldLabel("Ghi chú")
                    .TabIndex(3).Height(100),
                Html.X().ComboBoxFor(m=>m.IsUse)
                            .FieldLabel("Tình trạng")
                            .Items(
                                new ListItem("Sử dụng", true),
                                new ListItem("Không sử dụng", false)
                            ),
                Html.X().Container().Layout(LayoutType.Column).Items(
                    Html.X().DateFieldFor(m => m.CreateAt)
                        .ID("dtCreateAt")
                        .FieldLabel("Ngày tạo")
                        .ColumnWidth(0.5)
                        .TabIndex(5)
                        .Format("dd/MM/yyyy"),
                        Html.X().TextFieldFor(m => m.CreateByName).ID("txtCreateByName")
                        .FieldLabel("Người tạo").ColumnWidth(0.5).MarginSpec("0 0 0 10")
                        .TabIndex(5)
                        .LabelWidth(70)
                ),
                Html.X().Container().Layout(LayoutType.Column).Items(
                    Html.X().DateFieldFor(m => m.UpdateAt)
                        .ID("dtUpdateAt")
                        .FieldLabel("Ngày sửa")
                        .ColumnWidth(0.5)
                        .TabIndex(5)
                        .Format("dd/MM/yyyy")
                        ,
                        Html.X().TextFieldFor(m => m.UpdateByName).ID("txtUpdateByName")
                        .FieldLabel("Người sửa").ColumnWidth(0.5).MarginSpec("0 0 0 10")
                        .TabIndex(5)
                        .LabelWidth(70)

                     )
                )
        )
        .Buttons(
       
            Html.X().Button()
                .ID("btnCancel")
                .Icon(Icon.Decline)
                .Text("Thoát")
                .TabIndex(8)
                .Handler("App.winDetailMethod.close();")
        )
)

