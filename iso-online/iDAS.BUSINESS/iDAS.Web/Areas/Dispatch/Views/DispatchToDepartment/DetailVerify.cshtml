@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@using Ext.Net
@{
    var X = Html.X();
    var dtCreate = Model.CreateAt;
    var dtUpdate = Model.UpdateAt;
}
@model iDAS.Items.DispatchToObjectItem
@(Html.X().Window()
    .ID("winVerifyDispatchToDetail1")
    .Title("Xem chi tiết thông tin chuyển - nhận công văn đến")
    .Icon(Icon.Zoom)
    .Width(600)
    .BodyPadding(6)
    .Constrain(true)
    .Border(true)
    .Center()
    .Constrain(true)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .Layout(LayoutType.Form)
            .StyleSpec("border: none;")
            .Border(false)
            .Frame(true)
            .FieldDefaults(f => { f.LabelWidth = 80; f.ReadOnly = true; })
            .ID("frDispatchToDetailVerify1")
            .Items(
                Html.X().HiddenFor(m => m.ID),
                X.TextFieldFor(m => m.Name)
                    .ID("txtName")
                        .FieldLabel("Đối tượng nhận").LabelWidth(110),
                Html.X().Container().Layout(LayoutType.Column).Items(
                     X.TextFieldFor(m => m.CreateName)
                        .ID("txtCreateName")
                            .FieldLabel("Người chuyển").LabelWidth(110)
                        .ColumnWidth(0.5),
                    X.DateField()
                        .ID("dtCreateAt")
                        .ColumnWidth(0.5)
                            .FieldLabel("Thời gian chuyển").LabelWidth(110)
                        .LabelWidth(110)
                        .Value(dtCreate)
                        .Format("dd/MM/yyyy H:mm")
                       .MarginSpec("0 0 0 5")
                        ),
                Html.X().Container().Layout(LayoutType.Column).Items(
                    X.TextFieldFor(m => m.UpdateName)
                        .ID("txtUpdateName")
                            .FieldLabel("Người nhận").LabelWidth(110)
                        .ColumnWidth(0.5),
                    X.DateField()
                        .ID("dtUpdateAt")
                        .FieldLabel("Thời gian nhận")
                        .Format("dd/MM/yyyy H:mm ")
                        .LabelWidth(110)
                        .MarginSpec("0 0 0 5")
                        .ColumnWidth(0.5)
                        .Value(dtUpdate)
                        ),
                            X.TextAreaFor(m => m.NoteMove).Height(100).ID("txtNote").FieldLabel("Ghi chú").LabelWidth(110),
                             X.TextAreaFor(m => m.NoteVerify).Height(100).ID("txtNoteVerify").FieldLabel("Nội dung xác nhận").EmptyText("Nhập ý kiến xác nhận công văn......").LabelWidth(110)
                         )
                         )
                .Buttons(
                        Html.X().ButtonExit()
            )
)
