@using Ext.Net.MVC
@using iDAS.Utilities
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.DispatchGoObjectItem
@{
    var X = Html.X();
}
@(Html.X().Window()
    .ID("winVerifyOutDetailEmployee")
    .Title("Xem chi tiết thông tin xác nhận chuyển công văn đi của cá nhân")
    .Icon(Icon.Zoom)
    .BodyPadding(6).Border(true)
    .Modal(true)
    .Constrain(true)
    .Resizable(false)
     .Width(600)
    .Center()
    .Items(
        Html.X().FormPanel()
            .ID("frVerifyOutDetail")
            .Layout(LayoutType.Form)
            .StyleSpec("border: none;")
            .Border(false)
            .Frame(true)
            .FieldDefaults(f => { f.LabelWidth = 110; f.ReadOnly = true; })
            .Items(
                Html.X().HiddenFor(m => m.ID),
                Html.X().HiddenFor(m => m.DispatchGo),
                 Html.X().Container().Layout(LayoutType.Column).Items(
                    X.DateFieldFor(m => m.Date)
                        .ID("dtMoveAt")
                        .FieldLabel("Ngày chuyển")
                        .Format("dd/MM/yyyy")
                        .ColumnWidth(0.5),
                    X.DateFieldFor(m => m.DateVerify)
                        .ID("dtDateVerify")
                        .FieldLabel("Ngày xác nhận")
                        .Format("dd/MM/yyyy")
                        .ColumnWidth(0.5)
                        .MarginSpec("0 0 0 5")
                ),
                Html.X().Container().Layout(LayoutType.Column).Items(
                    X.TextFieldFor(m => m.CreateName)
                        .ID("txtCreateName")
                        .FieldLabel("Người chuyển")
                        .ColumnWidth(0.5),
                        X.TextFieldFor(m => m.UpdateName)
                        .ID("txtUpdateName")
                        .FieldLabel("Người xác nhận")
                          .ColumnWidth(0.5)
                          .MarginSpec("0 0 0 5")
                ),
                X.TextFieldFor(m => m.Name)
                    .ID("txtName")
                    .FieldLabel("Người nhận")
                    .ReadOnly(true),
                X.TextFieldFor(m => m.Position)
                    .ID("txtPosition")
                    .FieldLabel("Chức vụ")
                    .ReadOnly(true),
                X.TextFieldFor(m => m.Company)
                    .ID("txtCompany")
                    .FieldLabel("Tổ chức")
                    .ReadOnly(true),
                Html.X().Container().Layout(LayoutType.Column).Items(
                X.TextFieldFor(m => m.EmailPerson)
                    .ID("txtEmailPerson")
                    .FieldLabel("Email")
                    .ReadOnly(true)
                    .ColumnWidth(0.5),
                X.TextFieldFor(m => m.TelPerson)
                    .ID("txtTelPerson")
                    .FieldLabel("Di động")
                    .ReadOnly(true)
                    .ColumnWidth(0.5).MarginSpec("0 0 0 10")
                ),
                Html.X().TextAreaFor(m => m.Address).Height(50).FieldLabel("Địa chỉ").ReadOnly(true),
                   Html.X().TextAreaFor(m => m.NoteMove)
                        .Height(100).FieldLabel("Nội dung gửi").ReadOnly(true),
                Html.X().TextAreaFor(m => m.NoteVerify)
                        .Height(100).FieldLabel("Nội dung xác nhận").ReadOnly(true)
                    )
                    )
                    .Buttons(
                            Html.X().ButtonExit()
    )
)
