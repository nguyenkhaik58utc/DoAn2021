@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@using Ext.Net
@{
    var X = Html.X();
    var dt = Model.CreateAt;
    var dtVerify = Model.DateVerify;
}
@model iDAS.Items.DispatchGoObjectItem
@(Html.X().Window()
    .ID("winVerifyDispatchGoDetail1")
    .Title("Xem chi tiết thông tin chuyển - Nhận công văn đi")
    .Icon(Icon.Zoom)
    .Width(600)
    .BodyPadding(6)
    .Constrain(true)
    .Border(true)
    .Center()
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .Layout(LayoutType.Form)
            .StyleSpec("border: none;")
            .Border(false)
            .Frame(true)
            .FieldDefaults(f => { f.LabelWidth = 80; f.ReadOnly = true; })
            .ID("frDispatchGoDetailVerify1")
            .Items(
                Html.X().HiddenFor(m => m.ID),
                X.TextFieldFor(m => m.Name)
                        .ID("txtName").LabelWidth(110)
                    .FieldLabel("Đối tượng nhận"),
                Html.X().Container().Layout(LayoutType.Column).Items(
                    X.TextFieldFor(m => m.CreateName)
                        .ID("txtCreateName")
                            .FieldLabel("Người chuyển").LabelWidth(110)
                        .ColumnWidth(0.5),
                    X.DateField()
                        .ID("dtCreateAt")
                        .ColumnWidth(0.5)
                        .FieldLabel("Thời gian chuyển")
                        .LabelWidth(110)
                        .Value(dt)
                        .Format("dd/MM/yyyy H:mm")
                        .MarginSpec("0 0 0 5")
                        ),
                Html.X().Container().Layout(LayoutType.Column).Items(
                    X.TextFieldFor(m => m.UpdateName)
                        .ID("txtUpdateName")
                            .FieldLabel("Người nhận").LabelWidth(110)
                        .ColumnWidth(0.5),
                    X.DateField()
                        .ID("dtUpdateAt")
                        .FieldLabel("Thời gian nhận")
                        .Format("dd/MM/yyyy H:mm ")
                        .LabelWidth(110)
                        .Value(dtVerify)
                        .MarginSpec("0 0 0 5")
                        .ColumnWidth(0.5)
                        ),
                    X.TextAreaFor(m => m.NoteMove)
                    .Height(100)
                            .ID("txtNote").LabelWidth(110)
                        .FieldLabel("Nội dung gửi"),
                           X.TextAreaFor(m => m.NoteVerify)
                    .Height(100)
                                .ID("txtNoteVerify").LabelWidth(110)
                        .FieldLabel("Nội dung xác nhận")
                         )
                    )
                .Buttons(
                    Html.X().ButtonExit()
            )
)
