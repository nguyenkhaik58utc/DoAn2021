@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.DepartmentBroadItem
@(Html.X().Window()
                .Title(Model.Title)
                .Icon(Icon.BookOpen)
                .Height(1)
                .Maximized(true)
                .BodyPadding(0)
                .Constrain(true)
                .Modal(true)
                .Layout(LayoutType.Fit)
                .Border(false)
                .Items(
                            Html.X().HtmlEditorFor(m => m.Content).ReadOnly(true).FieldLabel("Nội dung").MinHeight(300).Flex(1).HideLabel(true)
                        )
)
