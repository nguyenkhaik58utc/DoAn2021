@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.DepartmentBroadItem
@(Html.X().Window()
                .Title("Xem chi tiết tin bài")
                .Icon(Icon.Zoom)
                .Height(1)
                .Maximized(true)
                .BodyPadding(0)
                .Constrain(true)
                .Modal(true)
                .Layout(LayoutType.Fit)
                .Items(
                        Html.X().CustomFormPanel().ID("frBroad")
                                .Items(
                                        Html.X().HiddenFor(m => m.ID),
                                        Html.X().Container().Layout(LayoutType.Column)
                                                .Items(
                                                        Html.X().TextFieldFor(m => m.Title).ReadOnly(true)
                                                                    .FieldLabel("Tiêu đề")
                                                                    .AllowOnlyWhitespace(false).ColumnWidth(0.7),
                                                    Html.X().TextFieldFor(m => m.CategoryName).ColumnWidth(0.3)
                                                                            .FieldLabel("Nhóm tin").ReadOnly(true).MarginSpec("0 0 0 10")
                                                        ),
                                        Html.X().TextAreaFor(m => m.Description).ReadOnly(true).EmptyText("Nhập mô tả").FieldLabel("Mô tả"),
                                        Html.X().HtmlEditorFor(m => m.Content).ReadOnly(true).FieldLabel("Nội dung").MinHeight(300).Flex(1)
                                    )
                        )
    .Buttons(Html.X().ButtonExit())
)