@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.DepartmentBroadCategoryItem
@(Html.X().CustomWindow()
                .ID("winDetailBroadCategory")
                .Title("Xem chi tiết thông tin nhóm tin nội bộ")
                .Items(
                        Html.X().CustomFormPanel()
                                .Items(
                                        Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên nhóm tin").ReadOnly(true)
                                            .BlankText("Tên nhóm tin không được trống!").AllowOnlyWhitespace(false),
                                        Html.X().TextAreaFor(m => m.Description).ReadOnly(true).MinHeight(100).Flex(1)
                                            .FieldLabel("Mô tả").LabelAlign(LabelAlign.Top).PaddingSpec("0 0 5 0")
                                )
            )
            .Buttons(Html.X().ButtonExit())
)