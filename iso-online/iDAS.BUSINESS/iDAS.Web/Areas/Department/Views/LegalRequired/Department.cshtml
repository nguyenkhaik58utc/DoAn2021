@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model List<iDAS.Items.HumanDepartmentItem>
@(Html.X().CustomWindow()
    .Title("Danh sách phòng ban không đạt")
    .Icon(Icon.Zoom)
    .Border(false)
    .Items(
               Html.X().GridPanel().Layout(LayoutType.Fit).ID("GrDepartmentFail")
                                    .Region(Region.Center)
                                    .Height(300)
                                    .Header(false)
                                    .ColumnLines(true)
                                    .ForceFit(true)
                                    .Border(true)
                                    .Store(
                                        Html.X().Store().ID("StoreAuditResult")
                                                .DataSource(Model)
                                                .RemotePaging(true)
                                                .Model(
                                                    Html.X().Model().Fields(
                                                        Html.X().ModelField().Name("Name")
                                                    )
                                              )
                                )
                                .ColumnModel(
                                            Html.X().RowNumbererColumn().Text("STT").Width(30).Align(Alignment.Center),
                                            Html.X().Column().DataIndex("Name").Text("Phòng ban")
                                    )
            )
.Buttons( Html.X().ButtonExit())
)