@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Web.ExtExtend
@model iDAS.Items.HumanRoleItem
@(Html.X().Window()
    .ID("DetailRoleWindow")
    .Title("Xem chi tiết chức danh")
    .Icon(Icon.Zoom)
    .BodyPadding(0)
    .Width(650)
    .Height(360)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Minimizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .Layout(LayoutType.Fit)
            .StyleSpec("border: none;")
            .Border(false)
            .Items(
                Html.X().TabPanel().ActiveTabIndex(0).Border(true)
                    .Items(
                        Html.X().FormPanel()
                            .Layout(LayoutType.VBox)
                            .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                            .Title("Thông tin chức danh")
                            .BodyPadding(5)
                            .Frame(true)
                            .StyleSpec("border: none;")
                            .FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
                            .Items(
                                Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên chức danh")
                                    .EmptyText("Nhập tên chức danh của phòng ban hoặc đơn vị")
                                    .BlankText("Bạn phải nhập tên chức danh của phòng ban hoặc đơn vị!")
                                    .AllowBlank(false).AllowOnlyWhitespace(false).ReadOnly(true),
                                Html.X().TextAreaFor(m => m.ReportTo).FieldLabel("Báo cáo tới")
                                    .EmptyText("Báo cáo tới ai hoặc chức danh nào").ReadOnly(true),
                                Html.X().TextAreaFor(m => m.ReplaceBy).FieldLabel("Thay thế bởi")
                                    .EmptyText("Thay thế bởi ai hoặc chức danh nào").ReadOnly(true),
                                Html.X().TextAreaFor(m => m.Note).FieldLabel("Ghi chú")
                                    .EmptyText("Thông tin ghi chú thêm của chức danh").ReadOnly(true),
                                Html.X().CheckboxFor(m => m.IsActive).FieldLabel("Sử dụng").ReadOnly(true)
                            ),
                        Html.X().Panel()
                            .Layout(LayoutType.VBox)
                            .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                            .Title("Trách nhiệm")
                            .Frame(true)
                            .StyleSpec("border: none;")
                            .Items(Html.X().TextAreaFor(m => m.Resposibility).EmptyText("Thông tin trách nhiệm của chức danh").Flex(1).HideLabel(true).ReadOnly(true)),
                        Html.X().Panel()
                            .Layout(LayoutType.VBox)
                            .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                            .Title("Quyền hạn")
                            .Frame(true)
                            .StyleSpec("border: none;")
                            .Items(Html.X().TextAreaFor(m => m.Authorize).EmptyText("Thông tin quyền hạn của chức danh").HideLabel(true).Flex(1).ReadOnly(true)),
                        Html.X().Panel()
                            .Layout(LayoutType.VBox)
                            .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                            .Title("Yêu cầu năng lực")
                            .Frame(true)
                            .StyleSpec("border: none;")
                            .Items(Html.X().TextAreaFor(m => m.Competence).EmptyText("Thông tin yêu cầu năng lực của chức danh").Flex(1).HideLabel(true).ReadOnly(true))
                    )
            )
    )
    .Buttons(Html.X().ButtonExit().Handler("this.up('window').close();"))
)