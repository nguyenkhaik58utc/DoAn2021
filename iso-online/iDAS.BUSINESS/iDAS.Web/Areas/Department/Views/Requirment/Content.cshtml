@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@{
    var content = Model.Content;
}
@(Html.X().Window().Height(1).Maximized(true)
    .Title("Nội dung")
    .Icon(Icon.Zoom)
    .Layout(LayoutType.Fit).BodyPadding(2)
    .Items(
            Html.X().TextArea().Value(content).ReadOnly(true).MinHeight(200).Flex(1).HideLabel(true)
        )
.Buttons(Html.X().ButtonExit())
)