@using Ext.Net;
@using Ext.Net.MVC;
@model  IEnumerable<iDAS.Items.HumanDepartmentViewItem>
@(Html.X().Window()
        .ID("winMultipleDetail")
        .Title("Thông tin chi tiết phòng ban")
        .Listeners(ls => ls.Close.Handler = "this.destroy()")
        .Icon(Icon.Zoom)
        .Width(300)
        .BodyPadding(0)
        .Margin(0)
        .Constrain(true)
        .Layout(LayoutType.Fit)
        .Modal(true)
        .Resizable(false)
        .Items(
                Html.X().GridPanel().Height(300).Border(false).ID("grMultipleDepartment")
                        .Store(Html.X().Store()
                                .Model(Html.X().Model()
                                    .Fields(
                                        new ModelField("Name")
                                    )
                                )
                                .DataSource(Model)
                            )
                        .ColumnModel(
                                Html.X().RowNumbererColumn().Text("STT").Width(30).Align(Alignment.Center),
                                Html.X().Column().DataIndex("Name").Text("Phòng ban").Flex(1)
                        )
            )
        .Buttons(Html.X().Button().Text("Đóng").Icon(Icon.Cancel).OnClientClick("this.up('window').close();"))
    )

