@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.ProfileCategoryItem
@(
 Html.X().Window()
    .ID("winDetailCancelMethod")
    .Title("Xem chi tiết thông tin phương thức hủy hồ sơ")
    .Icon(Icon.Zoom)
    .Width(500)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .Layout(LayoutType.Form)
            .StyleSpec("border: none;")
            .Border(false)
            .Frame(true)
            .ID("frmNewCancelMethod")
            .FieldDefaults(f => { f.LabelWidth = 110; f.ReadOnly = true; })
            .Items(
                Html.X().HiddenFor(m => m.ID),
                Html.X().TextFieldFor(m => m.Name)
                    .FieldLabel("Phương thức hủy" + Html.Required())
                    .AllowOnlyWhitespace(false)
                    .MaxLength(50).MaxLengthText("Tên phương thức không quá 50 ký tự!")
                    .AllowBlank(false).BlankText("Tên phương thức hủy bắt buộc nhập!"),
            Html.X().CheckboxFor(m => m.IsActive)
                    .FieldLabel("Kích hoạt"),
            Html.X().TextAreaFor(m => m.Note)
                    .ID("txtContent")
                    .FieldLabel("Mô tả")
                    .TabIndex(3).Height(100),
                        Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().TextFieldFor(m => m.CreateByName)
                            .ColumnWidth(0.6)
                            .FieldLabel("Người tạo")
                            .ID("CreateByName"),
                        Html.X().DateFieldFor(m => m.CreateAt)
                            .FieldLabel("Ngày tạo")
                            .ID("CreateAt")
                            .ColumnWidth(0.4)
                            .LabelWidth(70)
                            .Format("dd/MM/yyyy")
                            .MarginSpec("0 0 0 5")
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().TextFieldFor(m => m.UpdateByName)
                            .ColumnWidth(0.6)
                            .FieldLabel("Người sửa")
                             .ID("UpdateByName"),
                        Html.X().DateFieldFor(m => m.UpdateAt)
                            .FieldLabel("Ngày sửa")
                            .ID("UpdateAt")
                            .ColumnWidth(0.4)
                            .Format("dd/MM/yyyy")
                            .LabelWidth(70)
                            .MarginSpec("0 0 0 5")
                     )
            )
        )
        .Buttons(
            Html.X().ButtonExit()
        )
)
