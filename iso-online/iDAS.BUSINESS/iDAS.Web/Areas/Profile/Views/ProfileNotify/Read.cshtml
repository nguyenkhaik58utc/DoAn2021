@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.BusinessNotifyItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.Title("Chi tiết thông báo")
.ID("winDetailNoify")
.Height(320)
.Icon(Icon.Zoom)
.Width(500)
.Constrain(true)
        .Modal(true)
        .Layout(LayoutType.Fit)
        .Items(
        Html.X().FormPanel()
                .ID("frTarget")
                .Layout(LayoutType.VBox)
                .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                .Frame(true)
                .StyleSpec("border: none;")
                .FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
                .Items(
            Html.X().TextFieldFor(m=>m.Title).FieldLabel("Thông báo").ReadOnly(true),
            Html.X().TextFieldFor(m => m.DateSend).FieldLabel("Ngày gửi").ReadOnly(true),
            Html.X().TextFieldFor(m => m.EmployeeSend).FieldLabel("Người gửi").ReadOnly(true),
            Html.X().TextAreaFor(m => m.Content).FieldLabel("Nội dung").Height(160).ReadOnly(true)
            )
    )
.Buttons(Html.X().ButtonExit())
)
