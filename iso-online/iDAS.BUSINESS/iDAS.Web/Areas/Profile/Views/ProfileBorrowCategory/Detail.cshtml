@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.ProfileCategoryItem
@( Html.X().Window()
    .ID("winDetailCate")
    .Title("Xem chi tiết thông tin sổ theo dõi mượn hồ sơ")
    .Icon(Icon.Zoom)
    .Width(500)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .Layout(LayoutType.Form)
            .StyleSpec("border: none;")
            .Border(false)
            .Frame(true)
            .ID("frmDetailCate")
            .FieldDefaults(ff => ff.ReadOnly = true)
            .Items(
                Html.X().HiddenFor(m => m.ID),
                Html.X().TextFieldFor(m => m.Name)
                    .FieldLabel("Tên Sổ theo dõi"),
                Html.X().DepartmentFieldFor(m => m.Department).FieldLabel("Phòng ban").ReadOnly(true).Multiple(false).AllowBlank(false).Height(25),
                Html.X().TextAreaFor(m => m.Note)
                    .ID("txtContent")
                    .FieldLabel("Ghi chú")
                    .TabIndex(3).Height(100),
                Html.X().Container().Layout(LayoutType.Column).Items(
                Html.X().TextFieldFor(m => m.CreateByName)
                        .ColumnWidth(0.6)
                        .FieldLabel("Người tạo")
                        .ID("CreateByName"),
                    Html.X().DateFieldFor(m => m.CreateAt)
                        .FieldLabel("Ngày tạo")
                        .ID("CreateAt")
                        .ColumnWidth(0.4)
                        .LabelWidth(70)
                        .Format("dd/MM/yyyy")
                        .MarginSpec("0 0 0 5")
                    ),
                Html.X().Container().Layout(LayoutType.Column).Items(
                    Html.X().TextFieldFor(m => m.UpdateByName)
                        .ColumnWidth(0.6)
                        .FieldLabel("Người sửa")
                        .ID("UpdateByName"),
                    Html.X().DateFieldFor(m => m.UpdateAt)
                        .FieldLabel("Ngày sửa")
                        .ID("UpdateAt")
                        .ColumnWidth(0.4)
                        .Format("dd/MM/yyyy")
                        .LabelWidth(70)
                        .MarginSpec("0 0 0 5")
                     )
                )
        )
        .Buttons(
            Html.X().ButtonExit()
     )
)

