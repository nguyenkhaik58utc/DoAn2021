@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.ISOControlItem
@{
    var X = Html.X();
}
@(Html.X().Window().ItemID("windowId")
.BodyPadding(0)
.Width(550)
.Constrain(true)
.Modal(true)
.Layout(LayoutType.Fit)
.Maximizable(true)
    .Title("Chi tiết kiểm soát rủi ro mẫu")
.ID("winCustomerType")
.Icon(Icon.Zoom)
.Items(
        Html.X().CustomFormPanel()
                .FieldDefaults(df => { df.LabelWidth = 100; df.ReadOnly = true; })
                .Items(
                        X.TextFieldFor(m => m.ISOCode).FieldLabel("ISO"),
                        X.TextFieldFor(m => m.Clause).FieldLabel("Điều khoản"),
                        X.TextAreaFor(m => m.Target).FieldLabel("Mục tiêu").Height(50)
                                .AllowOnlyWhitespace(false),
                        X.TextAreaFor(m => m.Control).FieldLabel("Kiểm soát")
                                .MinHeight(200).Flex(1)
                    )
    )
.Buttons(Html.X().ButtonExit())
)