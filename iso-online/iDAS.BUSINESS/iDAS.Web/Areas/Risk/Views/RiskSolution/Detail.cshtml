@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.RiskLibrarySolutionItem
@{
    var X = Html.X();
}
@(Html.X().CustomWindow().Width(600)
.Title("Chi tiết danh mục kiểm soát kỹ thuật")
.ID("winCustomerType")
.Icon(Icon.Zoom)
.Items(
        Html.X().CustomFormPanel()
                    .FieldDefaults(df => { df.LabelWidth = 100; df.ReadOnly = true; })
                .Items(
                        X.HiddenFor(m => m.RiskTempControlID),
                        X.TextFieldFor(m => m.Description).FieldLabel("Mô tả").Height(50)
                                .AllowBlank(false),
                        X.TextAreaFor(m => m.Content).FieldLabel("Nội dung")
                                .EmptyText("Nhập nội dung...").Height(150).Flex(1)
                    )
    )
.Buttons( Html.X().ButtonExit())
)
