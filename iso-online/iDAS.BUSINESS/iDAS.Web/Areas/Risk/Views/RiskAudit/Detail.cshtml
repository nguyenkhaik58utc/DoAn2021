@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web;
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.RiskAuditItem

@(Html.X().Window()
.ID("winAuditRiskControl")
.Title("Xem chi tiết thông tin đánh giá kết quả kiểm soát rủi ro")
.Icon(Icon.Zoom)
.Width(600)
.Height(400)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(true)
.Modal(true)
.Resizable(false)
.Items(
     Html.X().FormPanel()
            .ID("frmAuditRiskControl")
                   .Layout(LayoutType.VBox)
                                        .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
            .Frame(true)
            .StyleSpec("border: none;")
            .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 100; })
            .Items(
                     Html.X().HiddenFor(m => m.ID),
                     Html.X().HiddenFor(m => m.RiskControlID),
                     Html.X().HiddenFor(m => m.QualityNCID),
            Html.X().DateFieldFor(m => m.AuditTime).ReadOnly(true)
                .FieldLabel("Ngày đánh giá" + Html.Required()),
                Html.X().ComboBoxFor(m => m.IsAccept).ReadOnly(true)
                .FieldLabel("Kết quả" + Html.Required())
                .Editable(false)
                .Items(
                    new ListItem("Đạt", true),
                    new ListItem("Không đạt", false)
                ),
                         Html.X().TextAreaFor(m => m.Note).ReadOnly(true)
                .Flex(1)
                .FieldLabel("Nhận xét")
                .EmptyText("Nhập nội dung thanh toán...")
                .BlankText("Nội dung thanh toán không được bỏ trống!")
                .AllowBlank(false)
    )
)
.Buttons(
    Html.X().ButtonExit()
    )
)
