@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.RiskIncedentItem
@{
    var X = Html.X();
}
@(Html.X().CustomWindow()
.Title("Chi tiết thông tin sự cố rủi ro")
.ID("winIncedentDetail")
.Icon(Icon.Zoom)
.Items(
        Html.X().CustomFormPanel()
                .FieldDefaults(df => { df.LabelWidth = 100; df.ReadOnly = true; })
                .Items(
                   X.DateTimeFieldFor(m => m.Time).FieldLabel("Thời gian" )
                                .AllowBlank(false).Height(24),
                        X.TextFieldFor(m=>m.Title).FieldLabel("Tiêu đề")
                                .AllowBlank(false),
                        X.TextAreaFor(m => m.Content).FieldLabel("Nội dung")
                                .EmptyText("Nhập nội dung...").Height(100).Flex(1)
                    )
    )
.Buttons( Html.X().ButtonExit())
)
