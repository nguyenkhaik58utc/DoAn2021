@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.HumanQuestionItem
@(Html.X().Window()
                .ID("winDetailQuestion")
                .Title("Xem chi tiết thông tin câu hỏi đánh giá")
                .Icon(Icon.Zoom)
                .Height(270)
          .Width(550)
                .BodyPadding(6)
                .Constrain(true)
                .Modal(true)
                .Layout(LayoutType.Fit)
                .Items(
                Html.X().FormPanel()
                .ID("frQuestion")
                .Layout(LayoutType.VBox)
                .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                .Frame(true)
                .StyleSpec("border: none;")
                .FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
                .Items(
                        Html.X().HiddenFor(m => m.ID),
                        Html.X().TextAreaFor(m => m.Name).FieldLabel("Tên bộ câu hỏi").Flex(1).ReadOnly(true).LabelAlign(LabelAlign.Top)
                        .BlankText("Tên bộ câu hỏi không được trống!").AllowOnlyWhitespace(false),
                    Html.X().CheckboxFor(m => m.IsUse).BoxLabel("Sử dụng").ReadOnly(true).HideLabel(true)            
               )
            )
            .Buttons(           
            Html.X().Button()
            .ID("btnCancel")
            .Text("Thoát")
            .Icon(Icon.Decline)
            .TabIndex(20)
            .Handler("App.frQuestion.reset(); this.up('window').close();")
            )
)