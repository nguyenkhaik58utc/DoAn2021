@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.HumanAuditLevelItem
@(Html.X().Window()
                .ID("winDetailAuditLevel")
                .Title("Xem chi tiết")
                .Icon(Icon.Zoom)
                .Width(450)
                .BodyPadding(6)
                .Constrain(true)
                .Modal(true)
                .Layout(LayoutType.Fit)
                .Items(
                Html.X().FormPanel()
                .ID("frAuditLevel")
                .Layout(LayoutType.VBox)
                .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                .Frame(true)
                .StyleSpec("border: none;")
                .FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
                .Items(
                        Html.X().HiddenFor(m => m.ID),
                        Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên xếp loại").ReadOnly(true)
                        .AllowOnlyWhitespace(false),
                                 Html.X().NumberFieldFor(m => m.MinPoint).FieldLabel("Hệ số").ReadOnly(true),
                                Html.X().NumberFieldFor(m => m.MaxPoint).FieldLabel("Điểm bé nhất").ReadOnly(true),
                            Html.X().TextAreaFor(m => m.Note).FieldLabel("Điểm lớn nhất").Flex(1).ReadOnly(true)
                )
            )
            .Buttons(           
            Html.X().Button()
            .ID("btnCancel")
            .Text("Thoát")
            .Icon(Icon.Decline)
            .TabIndex(20)
            .Handler("App.frAuditLevel.reset(); this.up('window').close();")
            )
)