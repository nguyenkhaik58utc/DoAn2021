@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.EquipmentCalibrationItem
@(Html.X().Window()
.Title("Thông tin kiểm định thiết bị")
.Icon(Icon.Zoom)
.Width(550)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Modal(true)
.Resizable(false)
.Items(
    Html.X().FormPanel()
        .Layout(LayoutType.Column)
        .Frame(true)
        .Border(false)
        .MarginSpec("0 -4 -3 -4")
        .StyleSpec("border: none;")
        .FieldDefaults(df => { df.LabelWidth = 120; })
        .Items(
              Html.X().TextFieldFor(m => m.AccreditationBy).ReadOnly(true)
                    .FieldLabel("Người kiểm định").ColumnWidth(1).MarginSpec("5 8 5 8"),
              Html.X().FieldSet().Title("Thời gian kiểm định").ColumnWidth(1).Layout(LayoutType.Column)
                    .Items(
                        Html.X().DateTimeFieldFor(m => m.AccreditationLastTime).ReadOnly(true)
                                .LabelWidth(90).FieldLabel("Thời gian")
                                .ColumnWidth(1).MarginSpec("5 8 5 8"),
                        Html.X().DateTimeFieldFor(m => m.AccreditationNextTime).ReadOnly(true).LabelWidth(90).FieldLabel("Lần tiếp theo")
                                .ColumnWidth(1).MarginSpec("5 8 5 8")
                            ),
                    Html.X().CheckboxFor(m => m.IsPass).ReadOnly(true).FieldLabel("Kết quả").BoxLabel("Đạt").ColumnWidth(0.4)
                        .MarginSpec("5 8 5 8"),
                    Html.X().NumberFieldFor(m => m.AccreditationPeriodic).ReadOnly(true).AllowBlank(false)
                        .FieldLabel("Chu kỳ kiểm định")
                        .ColumnWidth(0.8).Icon(Icon.Calendar)
                        .MarginSpec("5 8 0 8"),
              Html.X().Label().Text("(tháng/ lần)").ColumnWidth(0.2).MarginSpec("5 8 0 8"),
            Html.X().TextAreaFor(m => m.Note).ReadOnly(true).FieldLabel("Ghi chú").LabelAlign(LabelAlign.Top)
                        .ColumnWidth(1).MarginSpec("0 8 0 8").Height(200)   
            )
    )
    .Buttons( Html.X().Button().Text("Đóng").Icon(Icon.Cancel).OnClientClick("this.up('window').close();"))
)

