@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@using iDAS.Utilities
@model iDAS.Items.EquipmentMeasureItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.Title("Xem chi tiết thiết bị đo lường")
.Icon(Icon.Zoom)
.Width(700)
    .BodyPadding(6)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Items (
    Html.X().FormPanel()
        .ID("frmMeasureInfo")
    .Layout(LayoutType.Form)
    .Frame(true)
    .StyleSpec("border: none;")
    .FieldDefaults(d => { d.LabelAlign = LabelAlign.Left; d.LabelWidth = 105; })
    .Items (
            Html.X().Container()
                    .MarginSpec("0 0 0 0")
                    .Layout(LayoutType.Column)
                    .Items (
                         Html.X().HiddenFor(m => m.ID),
                    Html.X().HiddenFor(m=>m.EquipmentMeasureCategoryID).ReadOnly(true),
                             Html.X().TextFieldFor(m => m.EquipmentMeasureCategoryName).ReadOnly(true)
                    .FieldLabel("Nhóm thiết bị" )
                    .AllowBlank(false)
                    .LabelWidth(105)
                    .ReadOnly(true)
                    .MaxLength(255)
                    .MarginSpec("0 5 0 0")
                    .ColumnWidth(0.8)
                    .AllowOnlyWhitespace(false)
                    .AnchorHorizontal("100%"),
            Html.X().TextFieldFor(m => m.Code)
                        .FieldLabel("Mã" ).ReadOnly(true)
                    .MaxLength(20)
                    .MaxLengthText("Trường không vượt quá 20 ký tự!")
                    .AllowBlank(false)
                        .LabelWidth(40)
                    .ColumnWidth(0.2)
                    .BlankText("Mã thiết bị đo không được để trống!")
                    .AllowOnlyWhitespace(false)
                    .AnchorHorizontal("100%")
                    .TabIndex(5)
                    ),
                             Html.X().TextFieldFor(m => m.Name)
                            .FieldLabel("Tên thiết bị" ).ReadOnly(true)
                        .AllowBlank(false)
                             .LabelWidth(105)
                        .MaxLength(255)
                        .ColumnWidth(0.8)
                        .MaxLengthText("Trường không vượt quá 255 ký tự")
                        .BlankText("Tên thiết bị không được để trống!")
                        .AllowOnlyWhitespace(false)
                        .AnchorHorizontal("100%"),
            Html.X().Container()
                    .MarginSpec("0 0 0 0")
                    .Layout(LayoutType.Column)
                    .Items(
                Html.X().TextFieldFor(m => m.SerialNumber).ReadOnly(true)
                    .FieldLabel("Mã vạch")
                    .MarginSpec("0 5 0 0")
                    .MaxLength(20)
                    .MaxLengthText("Trường không vượt quá 20 ký tự")
                        .LabelWidth(105)
                    .ColumnWidth(0.5)
                    .AnchorHorizontal("100%")
                    .TabIndex(6),
                        Html.X().TextFieldFor(m => m.MadeIn).ReadOnly(true)
                    .FieldLabel("Xuất xứ")
                          .LabelWidth(50)
                    .MarginSpec("0 0 0 0")
                    .ColumnWidth(0.5)
                    .AnchorHorizontal("100%")
                    .TabIndex(9)
                    
                ),
                      Html.X().Container()
                        .MarginSpec("0 0 0 0")
                        .Layout(LayoutType.Column)
                        .Items(
                    Html.X().DateFieldFor(m => m.MadeYear).ReadOnly(true)
                        .FieldLabel("Năm sản xuất")
                           .LabelWidth(105)
                        .MaxLength(100)
                                    .ColumnWidth(0.5).MarginSpec("0 5 0 0")
                        .MaxLengthText("Trường không vượt quá 100 ký tự!")
                        .AnchorHorizontal("100%")
                        .TabIndex(10),
                                         Html.X().DateFieldFor(m => m.ExprireTime).ReadOnly(true)
                            .FieldLabel("Ngày hết hạn")
                               .LabelWidth(70)
                            .MaxLength(100)
                                    .ColumnWidth(0.5)
                            .MaxLengthText("Trường không vượt quá 100 ký tự!")
                            .AnchorHorizontal("100%")
                            .TabIndex(10)



                    ),
                         Html.X().Container()
                    .MarginSpec("0 0 0 0")
                    .Layout(LayoutType.Column)
                    .Items(
                    Html.X().NumberFieldFor(m => m.ScopeStart).ReadOnly(true)
                    .FieldLabel("Mức đo tối thiểu" )
                    .AllowBlank(false)
                    .ColumnWidth(0.5)
                    .MarginSpec("0 5 0 0")
                    .LabelWidth(105)
                    .AnchorHorizontal("100%")
                    .TabIndex(11),
                         Html.X().NumberFieldFor(m => m.ScopeEnd).ReadOnly(true)
                    .FieldLabel("Mức đo tối đa" )
                    .AllowBlank(false)
                    .ColumnWidth(0.5)
                    .LabelWidth(100)
                        .AnchorHorizontal("100%").MarginSpec("0 0 0 0")
                    .TabIndex(12)
                
                    ),
                         Html.X().Container()
                        .MarginSpec("0 0 0 0")
                        .Layout(LayoutType.Column)
                        .Items(
                              Html.X().TextFieldFor(m => m.ScopeUnit).ReadOnly(true)
                           .ColumnWidth(0.5)
                        .FieldLabel("Đơn vị tính" ).LabelWidth(105).MarginSpec("0 5 0 0"),
                             Html.X().NumberFieldFor(m => m.Accuracy).ReadOnly(true)
                               .ColumnWidth(0.2).DecimalPrecision(5)
                                 .FieldLabel("Sai số").LabelWidth(53).MarginSpec("0 5 0 0"),
                                        Html.X().DateFieldFor(m => m.UseStartTime).ColumnWidth(0.3).ReadOnly(true).FieldLabel("Ngày sử dụng")
                        ),
                          Html.X().TextAreaFor(m => m.Features).ReadOnly(true)
                        .FieldLabel("Đặc tính kỹ thuật" ).Height(100).LabelWidth(105),
                              Html.X().TextAreaFor(m => m.SupportInfomation).ReadOnly(true)
                            .FieldLabel("Thông tin hỗ trợ" ).LabelWidth(105).Height(100)
                        ,
                        Html.X().FileUploadFieldFor(m => m.AttachmentFiles).ReadOnly(true).ColumnWidth(1).MarginSpec("0 5 0 0")
                     
                    
             )
)
.Buttons(Html.X().Button().Text("Đóng").Icon(Icon.Cancel).TabIndex(15).OnClientClick("this.up('window').close();"))
)
