                            .Border(true)
                            .TopBar(
                        Html.X().Toolbar()
                            .Items(
                        Html.X().ComboBox()
                            .FieldLabel("Biểu đồ")
                            .Width(300)
                            .MarginSpec("0 0 0 5")
                            .LabelWidth(50)
