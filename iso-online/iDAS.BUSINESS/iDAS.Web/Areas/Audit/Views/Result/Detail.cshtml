@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.AuditResultItem
@(Html.X().Window()
          .ID("winEditResult")
          .Title("Xem chi tiết thông tin kết quả đánh giá")
          .Icon(Icon.Zoom)          
          .Width(550)
          .BodyPadding(6)
          .Constrain(true)
          .Modal(true)
          .Layout(LayoutType.Fit)
          .Items(
        Html.X().FormPanel()
                .ID("frResult")
                .Layout(LayoutType.Form)
                .Frame(true)
                .StyleSpec("border: none;")
                .FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
                .Items(
                 Html.X().HiddenFor(m => m.ID),
                 Html.X().NumberFieldFor(m => m.Point)
                     .FieldLabel("Điểm")
                     .LabelWidth(120)
                     .ReadOnly(true),
                 Html.X().ComboBoxFor(m => m.IsPass)
                 .ID("cbDPointRe")
                     .FieldLabel("Kết quả")
                     .LabelWidth(120)
                     .ReadOnly(true)
                     .Items(
                     new ListItem("Đạt", true),
                     new ListItem("Không đạt", false)
                     ),
                 Html.X().TextAreaFor(m => m.AuditNote)
                     .ID("txtNote")
                     .ReadOnly(true)
                     .FieldLabel("Nội dung")
                     .Height(150)
                     .LabelWidth(120)
               )
            )
            .Buttons(           
            Html.X().ButtonExit()
                .ID("btnCancelDetail")
            )
)