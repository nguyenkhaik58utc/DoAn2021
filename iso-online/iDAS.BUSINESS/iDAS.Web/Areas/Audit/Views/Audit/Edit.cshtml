@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.AuditItem
@(Html.X().FormPanel()
    .Layout(LayoutType.Form)
    .Border(false)
    .ID("frAudit")
    .Padding(0)
    .Title("KẾT QUẢ ĐÁNH GIÁ")
    .Header(false)
    .TitleAlign(TitleAlign.Center)
    .Margin(0)
    .BodyBorder(0)
    .FieldDefaults(fs => fs.LabelWidth = 90)
    .StyleSpec("border: none;")
    .Frame(true)
    .Items(
        Html.X().Container()
        .Padding(10)
        .Layout(LayoutType.VBox)
        .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
        .Items(
            Html.X().HiddenFor(m => m.TaskID)
                .ID("hdfTaskID")
                .ReadOnly(true),
            Html.X().HiddenFor(m => m.DepartmentID)
                    .ID("hdfDepartmentID")
                    .ReadOnly(true),            
            Html.X().HiddenFor(m => m.ID)            
                .ID("hdfAuditId")
                .ReadOnly(true),
            Html.X().EmployeeFieldFor(m => m.Audit).ReadOnly(true).Title("Người đánh giá"),  
            Html.X().Container()
                .Layout(LayoutType.Column)
                .Items(
                Html.X().DateFieldFor(m => m.Time)
                .ColumnWidth(0.7)
                .ID("dfTime")
                .BlankText("Bạn phải chọn thời gian đánh giá!")
                .FieldLabel("Thời gian" + Html.Required())               
                .Format("dd/MM/yyyy")
                ),
            Html.X().Container()
                .Layout(LayoutType.Column)
                .Items(
            Html.X().ComboBoxFor(m => m.IsPass)
                .ID("cbReAudit")
                .ColumnWidth(0.7)
                .FieldLabel("Kết quả" + Html.Required())
                .Editable(false)
                .Items(
                    new ListItem("Đạt", true),
                    new ListItem("Không đạt", false)
                )                
             ),         
            Html.X().TextAreaFor(m => m.Note)
                .Height(210)
                .FieldLabel("Nhận xét")
                .EmptyText("Nhận xét đánh giá chung")
        )
    )
    
)
