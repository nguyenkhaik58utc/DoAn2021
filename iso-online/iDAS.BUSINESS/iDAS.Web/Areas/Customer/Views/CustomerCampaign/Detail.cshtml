@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CustomerCampaignItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.ID("WinCustomerCompaignDetail")
.Title("Xem chi tiết chiến dịch")
.Icon(Icon.Zoom)
.Width(800)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(true)
.Modal(true)
.Resizable(false)
.Items(
         X.FormPanel()
         .StyleSpec("border: none;")
        .Layout(LayoutType.Column)
        .Frame(true)
        .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 120; })
        .Items(
                            X.HiddenFor(m => m.ID),
                            X.TextFieldFor(m => m.Name)
                                    .FieldLabel("Chiến dịch" )
                                    .ColumnWidth(1)
                                    .MarginSpec("5 8 0 8").ReadOnly(true),
                            X.DateFieldFor(m => m.StartTime).FieldLabel("Bắt đầu" )
                                    .ColumnWidth(0.5)
                                    .MarginSpec("5 8 0 8").ReadOnly(true),
                            X.DateFieldFor(m => m.EndTime).FieldLabel("Kết thúc" )
                                    .ColumnWidth(0.5)
                                    .MarginSpec("5 8 0 8").ReadOnly(true),
                            X.NumberFieldFor(m => m.Cost).FieldLabel("Chi phí")
                                    .ColumnWidth(0.5)
                                    .MarginSpec("5 8 0 8").ReadOnly(true),
                            X.NumberFieldFor(m => m.Income).FieldLabel("Doanh thu")
                                    .ColumnWidth(0.5)
                                    .MarginSpec("5 8 0 8").ReadOnly(true),
                            X.DisplayFieldFor(m=>m.Status)
                                    .FieldLabel("Trạng thái" )
                                .ColumnWidth(1)
                                .MarginSpec("5 8 0 8").ReadOnly(true),
                            X.TextAreaFor(m => m.Note)
                                .FieldLabel("Ghi chú")
                                .ColumnWidth(1)
                                    .MarginSpec("5 8 0 8").ReadOnly(true)
                                .Height(100)
                                .EmptyText("Nhập nội ghi chú thông tin Chiến dịch ...")

                            )
    )
.Buttons(Html.X().ButtonExit())
)
