@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@using iDAS.Utilities;
@model iDAS.Items.CustomerSurveyItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.ID("winUpdateOrderCustomer")
.Title("Xem chi tiết khảo sát")
.Icon(Icon.Zoom)
.Width(800)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(true)
.Modal(true)
.Resizable(false)
.Items(
     X.FormPanel().ID("frmUpdate")
            .Layout(LayoutType.Column)
            .Frame(true)
            .StyleSpec("border: none;")
            .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 110; })
            .Items(
                X.TextFieldFor(m => m.Name)
                        .FieldLabel("Đợt khảo sát")
                        .ReadOnly(true)
                        .ColumnWidth(1)
                        .MarginSpec("5 8 0 8 "),
                X.TextFieldFor(m => m.Method).ColumnWidth(1).FieldLabel("Hình thức").ReadOnly(true)
                        .MarginSpec("5 8 0 8"),
                X.DateFieldFor(m => m.StartTime).FieldLabel("Thời gian bắt đầu" ).EmptyValue(DateTime.Now)
                        .ReadOnly(true)
                        .ColumnWidth(0.5)
                        .MarginSpec("5 8 0 8"),
                X.DateFieldFor(m => m.EndTime).FieldLabel("Thời gian kết thúc" ).EmptyValue(DateTime.Now)
                        .ReadOnly(true)
                        .ColumnWidth(0.5)
                        .MarginSpec("5 8 0 8"),
                X.NumberFieldFor(m => m.Cost).ColumnWidth(1).FieldLabel("Chi phí").ReadOnly(true) .MarginSpec("5 8 0 8"),
                X.DisplayFieldFor(m => m.Status).ReadOnly(true)
                        .FieldLabel("Trạng thái" )
                    .ColumnWidth(1)
                    .MarginSpec("5 8 0 8"),
                X.TextAreaFor(m => m.Note).ReadOnly(true)
                    .FieldLabel("Ghi chú")
                    .EmptyText("Nhập ghi chú...")
                    .Height(150)
                    .ColumnWidth(1)
                    .MarginSpec("5 8 0 8")
    )
)
.Buttons(Html.X().ButtonExit())
)
