@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CustomerSurveyQuestionItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.ID("winSurveyQuestionDetail")
.Title("Xem chi tiết khảo sát")
.Icon(Icon.Zoom)
.Width(800)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Modal(true)
.Resizable(false)
.Items(
    Html.X().FormPanel()
    .ID("frmUpdate")
    .Layout(LayoutType.Column)
    .Frame(true)
    .Border(false)
    .MarginSpec("0 -4 -3 -4")
    .StyleSpec("border: none;")
    .FieldDefaults(df => { df.LabelWidth = 120; })
    .Items(
            X.HiddenFor(m => m.ID),  X.HiddenFor(m=>m.ParentID),X.HiddenFor(m=>m.SurveyID),
            X.TextFieldFor(m => m.Name)
                .FieldLabel("Nội dung khảo sát" )
                .ReadOnly(true)
                .ColumnWidth(1)
                .MarginSpec("5 8 0 8"),
            X.TextAreaFor(m => m.Note).FieldLabel("Ghi chú").ColumnWidth(1).MarginSpec("5 8 0 8").Height(150).ReadOnly(true),
            X.ComboBoxFor(m => m.IsMulti).Items(new ListItem("Nhiều lựa chọn", true), new ListItem("Một lựa chọn", false))
                                            .FieldLabel("Loại câu hỏi").PaddingSpec("5 8 4 8").ColumnWidth(0.5).ReadOnly(true),
            X.CheckboxFor(m => m.IsUse).FieldLabel("Sử dụng").BoxLabel("có").ColumnWidth(1).MarginSpec("5 8 0 8").ReadOnly(true)
        )
    )
    .Buttons(
        Html.X().ButtonExit())
)
