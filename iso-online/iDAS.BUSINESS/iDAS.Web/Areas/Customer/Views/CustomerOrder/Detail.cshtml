@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CustomerOrderItem
@{
    var X = Html.X();
}
@(Html.X().CustomWindow().Maximizable(false)
.Title("Chi tiết đơn hàng").ID("winOrderDetail")
.Icon(Icon.Zoom)
.Items(
     X.FormPanel()
            .Layout(LayoutType.Column)
            .Frame(true)
            .StyleSpec("border: none;")
                 .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 110; })
            .Items(
                X.HiddenFor(m => m.ID), X.HiddenFor(m => m.CustomerID),
                X.TextFieldFor(m => m.ProductName)
                        .FieldLabel("Sản phẩm" )
                        .ColumnWidth(1)
                        .ReadOnly(true).MarginSpec("5 8 0 8"),
                X.NumberFieldFor(m => m.Quantity)
                            .FieldLabel("Số lượng" )
                            .ColumnWidth(0.5)
                            .ReadOnly(true).MarginSpec("5 8 0 8"),
                X.DateFieldFor(m => m.Time).FieldLabel("Thời gian" ).EmptyValue(DateTime.Now)
                            .ColumnWidth(0.5)
                            .ReadOnly(true).MarginSpec("5 8 0 8"),
                Html.X().CheckboxFor(m => m.IsPrice).BoxLabel("xác nhận").MarginSpec("5 8 0 8").FieldLabel("Đã báo giá")
                                                                                .ColumnWidth(0.5).ReadOnly(true),            
                Html.X().FileUploadFieldFor(m => m.AttachmentFile).ReadOnly(true).ColumnWidth(1).MarginSpec("5 8 0 8"),
                X.TextAreaFor(m => m.Note)
                        .FieldLabel("Ghi chú")
                        .Height(150)
                        .ColumnWidth(1)
                        .ReadOnly(true).MarginSpec("5 8 0 8")
    )
)
.Buttons(Html.X().ButtonExit())
)
