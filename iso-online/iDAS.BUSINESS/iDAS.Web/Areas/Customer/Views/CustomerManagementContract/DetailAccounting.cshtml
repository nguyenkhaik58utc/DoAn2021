@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web;
@using iDAS.Utilities
@model iDAS.Items.AccountingPaymentItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.Title("Chi tiết đề xuất thanh toán")
.ID("winAccountingPayment")
.Icon(Icon.Zoom)
.Width(600)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(true)
.Modal(true)
.Resizable(false)
.Items(
     X.FormPanel()
            .Layout(LayoutType.Column)
            .Frame(true)
            .StyleSpec("border: none;")
                 .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 110; })
            .Items(
                    X.TextAreaFor(m => m.Content).Height(100)
                            .FieldLabel("Nội dung" + Html.Required())
                            .EmptyText("Nhập nội dung thanh toán...")
                            .BlankText("Nội dung thanh toán không được bỏ trống!")
                            .AllowBlank(false)
                            .ColumnWidth(1).ReadOnly(true)
                            .MarginSpec("5 8 0 8"),
                    X.NumberFieldFor(m => m.Value).Icon(Icon.MoneyDollar)
                            .FieldLabel("Trị giá thu hồi")
                            .EmptyText("Nhập trị giá thu hồi...")
                            .ColumnWidth(0.5).ReadOnly(true)
                            .MarginSpec("5 8 0 8"),
                    X.NumberFieldFor(m => m.Rate).Icon(Icon.ChartBar)
                                .FieldLabel("Tỉ lệ thu hồi (%)").LabelAlign(LabelAlign.Right)
                            .EmptyText("% giá trị hợp đồng...")
                            .ColumnWidth(0.5).ReadOnly(true)
                            .MarginSpec("5 8 0 8"),
                    X.TextAreaFor(m => m.Note)
                            .FieldLabel("Ghi chú")
                            .EmptyText("Nhập ghi chú...")
                            .Height(150)
                            .ReadOnly(true)
                            .ColumnWidth(1)
                            .MarginSpec("5 8 0 8")
    )
)
.Buttons(Html.X().Button().Text("Đóng").Icon(Icon.Cancel).OnClientClick("this.up('window').close();"))
)
