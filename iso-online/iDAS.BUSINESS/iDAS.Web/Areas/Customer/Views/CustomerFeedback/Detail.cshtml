@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CustomerFeedbackItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.ID("winFeedBackDetail")
.Title("Chi tiết phản hồi của khách hàng")
.Icon(Icon.Zoom)
.Width(800)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(true)
.Modal(true)
.Resizable(false)
.Items(
     X.FormPanel().ID("frmUpdate")
            .Layout(LayoutType.Column)
            .Frame(true)
            .StyleSpec("border: none;")
                 .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 110; })
            .Items(
                X.DateFieldFor(m => m.Time).FieldLabel("Thời gian").EmptyValue(DateTime.Now)
                            .ReadOnly(true)
                            .ColumnWidth(0.5)
                            .MarginSpec("5 8 0 8"),
                X.TextAreaFor(m => m.Content)
                        .FieldLabel("Nội dung")
                        .ReadOnly(true)
                        .Height(150)
                        .ColumnWidth(1)
                        .MarginSpec("5 8 0 8")
    )
)
.Buttons( Html.X().ButtonExit())
)
