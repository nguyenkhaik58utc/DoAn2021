@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CustomerCareItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.ID("winUpdateCustomerCare")
.Title("Xem chi tiết chương trình chăm sóc")
.Icon(Icon.Zoom)
.Width(800)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(false)
.Modal(true)
.Resizable(false)
.Items(
     X.FormPanel().ID("frmUpdate")
    .Layout(LayoutType.Column)
    .Frame(true)
    .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 120; })
    .Items(
                        X.HiddenFor(m=>m.ID),
                        X.TextFieldFor(m=>m.Name).ID("txtCustomerName")
                                .FieldLabel("Chương trình")
                                .ReadOnly(true)
                                .ColumnWidth(1)
                                .MarginSpec("5 8 0 8"),
                        X.TextFieldFor(m => m.Method).FieldLabel("Phương thức")
                                .ReadOnly(true)
                                .ColumnWidth(1)
                                .MarginSpec("5 8 0 8"),
                        X.DateFieldFor(m => m.StartTime).FieldLabel("Bắt đầu")
                                .ReadOnly(true)
                                .ColumnWidth(0.5)
                                .MarginSpec("5 8 0 8"),
                        X.DateFieldFor(m => m.EndTime).FieldLabel("Kết thúc")
                                .ReadOnly(true)
                                .ColumnWidth(0.5)
                                .MarginSpec("5 8 0 8"), 
                        X.NumberFieldFor(m => m.Cost).FieldLabel("Chi phí")
                                .ReadOnly(true)
                                .ColumnWidth(0.5)
                                .MarginSpec("5 8 0 8"),
                       
                        X.DisplayFieldFor(m => m.Status).FieldLabel("Trạng thái")
                                        .ColumnWidth(1)
                                        .MarginSpec("5 8 0 8"),                   
                        X.TextAreaFor(m => m.Note).ReadOnly(true)
                            .FieldLabel("Ghi chú")
                            .ColumnWidth(1)
                                .MarginSpec("5 8 0 8")
                            .Height(100)
                            .EmptyText("Nhập nội ghi chú thông tin chương trình chăm sóc...")

                        )
           )
.Buttons(Html.X().ButtonExit())
)
