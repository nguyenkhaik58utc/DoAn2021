@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CustomerCareResultItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.Title("Xem chi tiết khách hàng chăm sóc")
.Icon(Icon.Zoom)
.Width(800)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(true)
.Modal(true)
.Resizable(false)
.Items(
     X.FormPanel()
    .Layout(LayoutType.Column)
    .StyleSpec("border: none;")
    .Frame(true)
    .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 120; })
    .Items(
                        X.HiddenFor(m => m.ID), 
                        X.HiddenFor(m=>m.CareID),
                        X.HiddenFor(m => m.CustomerID),
                            X.TextFieldFor(m => m.Name).FieldLabel("Khách hàng")
                                    .ColumnWidth(1)
                                    .MarginSpec("5 8 0 8").ReadOnly(true), 
                        X.TextFieldFor(m=>m.Method).ColumnWidth(1).FieldLabel("Hình thức")
                                .MarginSpec("5 8 0 8").ReadOnly(true),
                        X.TextAreaFor(m=>m.Note)
                                .FieldLabel("Nội dung")
                            .ColumnWidth(1)
                                .MarginSpec("5 8 0 8")
                            .Height(100)
                                .ReadOnly(true),
                            X.DisplayFieldFor(m => m.SuccessStatus).FieldLabel("Kết quả")
                                     .ColumnWidth(1).ReadOnly(true)
                                        .MarginSpec("5 8 0 8")
                            //            ,
                            //X.TextFieldFor(m => m.CreateByName).FieldLabel("Người tạo").ColumnWidth(0.5).ReadOnly(true).MarginSpec("5 8 0 8"),
                            //X.TextFieldFor(m => m.UpdateByName).FieldLabel("Người sửa").ColumnWidth(0.5).ReadOnly(true).MarginSpec("5 8 0 8"),
                            //X.DateFieldFor(m => m.CreateAt).FieldLabel("Ngày tạo").ColumnWidth(0.5).ReadOnly(true).MarginSpec("5 8 0 8"),
                            //X.DateFieldFor(m => m.UpdateAt).FieldLabel("Ngày sửa").ColumnWidth(0.5).ReadOnly(true).MarginSpec("5 8 0 8")
                        )
           )
.Buttons( Html.X().ButtonExit())
)
