@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@using  iDAS.Web;
@using iDAS.Utilities;
@model iDAS.Items.CustomerContactItem
@{
    var X = Html.X();
}
@(Html.X().CustomWindow()
.Title("Xem chi tiết người liên hệ")
.Icon(Icon.Zoom)
.Width(800)
.Items(
         X.CustomFormPanel()
            .Items(
                        X.FormPanel()
                            .Layout(LayoutType.HBox)
                            .LayoutConfig(new HBoxLayoutConfig { Align = HBoxAlign.Top, Pack = BoxPack.Start })
                            .StyleSpec("border: none;")
                            .Margin(0).BodyPadding(0).Frame(true)
                            .Items(
                                    X.Panel().Frame(true)
                                        .Layout(LayoutType.Column)
                                        .Padding(0).Margin(0)
                                        .Border(false)
                                        .StyleSpec("border: none;").Flex(1)
                                        .Items(
                                                X.TextFieldFor(m => m.Name).ReadOnly(true)
                                                    .FieldLabel("Người liên hệ")
                                                    .EmptyText("Nhập tên người liên hệ ...")
                                                    .ColumnWidth(1)
                                                    .MarginSpec("0 8 0 8"),
                                                X.DateFieldFor(m => m.Birthday).FieldLabel("Ngày sinh").ReadOnly(true)
                                                            .ColumnWidth(0.5)
                                                            .MarginSpec("5 8 0 8"),
                                                X.TextFieldFor(m => m.Phone).FieldLabel("Điện thoại").ReadOnly(true)
                                                    .ColumnWidth(1)
                                                    .MarginSpec("5 8 0 8"),
                                                X.TextFieldFor(m => m.Email).FieldLabel("Email").ReadOnly(true)
                                                    .ColumnWidth(1)
                                                    .MarginSpec("5 8 0 8"),
                                                X.TextFieldFor(m => m.Role).FieldLabel("Chức danh").ReadOnly(true).ColumnWidth(1)
                                                    .MarginSpec("5 8 0 8"),
                                                X.TextAreaFor(m => m.Department).FieldLabel("Phòng ban").ReadOnly(true).ColumnWidth(1)
                                                        .MarginSpec("5 8 0 8").Height(68)
                                              ),
                                        X.FieldSet().Layout(LayoutType.Form)
                                                .Width(140).Height(170)
                                                .PaddingSpec("5 5 5 5")
                                                .Items(
                                                        X.ImageButton().ID("imgAvatar").Height(160).Text("Ảnh đại diện")
                                                                .ImageUrl(Url.Action("LoadImage", "File", new { area = "Generic", fileId = Model.AttachmentFileID, fileName = Model.FileName }))
                                                                .ToolTip("Ảnh đại diện").StyleSpec("border: 0.5px solid #b5b8c8; width:100%;")
                                                      ) 
                                   ),
                        X.CustomFormPanel().Flex(1).Padding(0).MarginSpec("-3 0 0 2")
                                .Items(                       
                                        X.TextAreaFor(m => m.Address).FieldLabel("Địa chỉ").Height(94).ReadOnly(true),
                                        X.TextAreaFor(m => m.Note).ReadOnly(true)
                                            .FieldLabel("Ghi chú")
                                            .MinHeight(100).Flex(1)
                                        )
                                      
           )
    )
.Buttons(Html.X().ButtonExit())
)
