@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CustomerCategoryItem
@(Html.X().CustomWindow()
.Title("Thông tin chi tiết nhóm khách hàng")
.Icon(Icon.Zoom)
.Items(
        Html.X().CustomFormPanel()
            .FieldDefaults(df => { df.LabelWidth = 110; })
            .Items(
                        Html.X().TextFieldFor(m => m.Name).ReadOnly(true)
                            .FieldLabel("Nhóm khách hàng")
                            .EmptyText("Nhập tên nhóm khách hàng...")
                            .BlankText("Tên nhóm khách hàng không được bỏ trống!")
                            .AllowOnlyWhitespace(false),
                            Html.X().DepartmentFieldFor(m => m.Departments).FieldLabel("Phòng ban").ReadOnly(true).MarginSpec("0 1 0 0"),
                        Html.X().TextAreaFor(m => m.Note).ReadOnly(true).FieldLabel("Ghi chú").Flex(1).Height(150).EmptyText("Nhập ghi chú nhóm khách hàng..")
                    )
    )   
    .Buttons( Html.X().ButtonExit())
)

