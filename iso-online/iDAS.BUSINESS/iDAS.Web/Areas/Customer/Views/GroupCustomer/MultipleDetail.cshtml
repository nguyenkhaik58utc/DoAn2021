@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model  IEnumerable<iDAS.Items.CustomerCategoryDetailItem>
@(Html.X().Window()
        .ID("winMultipleDetail")
        .Title("Thông tin chi tiết nhóm khách hàng")
        .Listeners(ls => ls.Close.Handler = "this.destroy()")
        .Icon(Icon.Zoom)
        .Width(600)
        .BodyPadding(0)
        .Margin(0)
        .Constrain(true)
        .Layout(LayoutType.Fit)
        .Modal(true)
        .Resizable(false)
        .Items(
                Html.X().GridPanel().Height(300).Border(false).ID("grMultipleCustomerDetail")
                        .Store(Html.X().Store()
                                .Model(Html.X().Model()
                                    .Fields(
                                        new ModelField("Name")
                                    )
                                )
                                .DataSource(Model)
                            )
                        .ColumnModel(
                                Html.X().RowNumbererColumn().Text("STT").Width(30).Align(Alignment.Center),
                                Html.X().Column().DataIndex("Name").Text("Nhóm khách hàng").Flex(1)
                        )
            )
        .Buttons(Html.X().ButtonExit())
    )

