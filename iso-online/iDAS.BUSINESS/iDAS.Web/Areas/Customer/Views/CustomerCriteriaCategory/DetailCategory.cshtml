@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.CustomerCriteriaCategoryItem
@(Html.X().CustomWindow()
                .ID("winDetailCriteriaCategory")
                .Title("Xem chi tiết thông tin bộ tiêu chí đánh giá")
                .Items(
                        Html.X().CustomFormPanel()
                                .Items(
                                        Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên bộ tiêu chí").ReadOnly(true)
                                                                .BlankText("Tên bộ tiêu chí không được trống!").AllowOnlyWhitespace(false),
                                        Html.X().TextAreaFor(m => m.Note).ReadOnly(true).MinHeight(100).Flex(1).FieldLabel("Ghi chú").LabelAlign(LabelAlign.Top),
                                        Html.X().CheckboxFor(m => m.IsActive).ReadOnly(true).BoxLabel("Sử dụng").HideLabel(true)
                                )
            )
            .Buttons(Html.X().ButtonExit())
)