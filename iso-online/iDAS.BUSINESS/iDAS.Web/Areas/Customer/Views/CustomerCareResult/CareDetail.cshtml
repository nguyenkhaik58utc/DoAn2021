@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CustomerCareResultItem
@{
    var X = Html.X();
    var status = Model.IsSuccess ? "Thành công" : "Thất bại";
}
@(Html.X().Window()
.ID("winCareDetail")
.Title("Chi tiết kết quả chăm sóc")
.Icon(Icon.Zoom)
.Width(800)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(true)
.Modal(true)
.Resizable(false)
.Items(
     X.FormPanel().ID("frmDetail")
    .StyleSpec("border: none;")
    .Layout(LayoutType.Column)
    .Frame(true)
    .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 133; })
    .Items(
                        X.HiddenFor(m => m.ID),
                        X.TextFieldFor(m => m.CareName).AllowBlank(false).ReadOnly(true)
                                    .FieldLabel("Chương trình chăm sóc")
                                    .ColumnWidth(1)
                                    .MarginSpec("5 8 0 8"),
                        X.TextFieldFor(m => m.Method).ReadOnly(true).ColumnWidth(1).FieldLabel("Hình thức")
                                        .MarginSpec("5 8 0 8"),
                        X.TextAreaFor(m => m.Note).ReadOnly(true)
                            .FieldLabel("Nội dung")
                            .ColumnWidth(1)
                                .MarginSpec("5 8 0 8")
                            .Height(100),
                        X.DisplayFieldFor(m => m.SuccessStatus).FieldLabel("Kết quả")
                                .ColumnWidth(1)
                                    .MarginSpec("5 8 0 8").ReadOnly(true)
            //                        ,
            //            X.TextFieldFor(m => m.CreateByName).FieldLabel("Người tạo").ColumnWidth(0.5).ReadOnly(true).MarginSpec("5 8 0 8"),
            //            X.TextFieldFor(m => m.UpdateByName).FieldLabel("Người sửa").ColumnWidth(0.5).ReadOnly(true).MarginSpec("5 8 0 8"),
            //            X.DateFieldFor(m => m.CreateAt).FieldLabel("Ngày tạo").ColumnWidth(0.5).ReadOnly(true).MarginSpec("5 8 0 8"),
            //            X.DateFieldFor(m => m.UpdateAt).FieldLabel("Ngày sửa").ColumnWidth(0.5).ReadOnly(true).MarginSpec("5 8 0 8")
            )
           )
.Buttons(Html.X().ButtonExit())
)
