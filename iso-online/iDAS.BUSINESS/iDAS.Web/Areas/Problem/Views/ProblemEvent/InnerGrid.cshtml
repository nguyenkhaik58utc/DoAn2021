@using Ext.Net;
@using Ext.Net.MVC;
@model System.Collections.IEnumerable
@(
    Html.X().GridPanel()
        .Height(100)
        .Store(Html.X().Store()
            .DataSource(Model)
            .Model(Html.X().Model()
                .Fields(
                    Html.X().ModelField().Name("ID"),
                    Html.X().ModelField().Name("UserName"),
                    Html.X().ModelField().Name("Phone"),
                    Html.X().ModelField().Name("Email"),
                    Html.X().ModelField().Name("DepartmentName")
                )
            )
        )
        .ColumnModel(
            Html.X().Column().Text("Người xử lý").DataIndex("UserName").Width(180),
            Html.X().Column().Text("Điện thoại").DataIndex("Phone").Width(150),
            Html.X().Column().Text("Email").DataIndex("Email").Width(150),
            Html.X().Column().Text("Phòng ban").DataIndex("DepartmentName").Flex(1)
        )
)