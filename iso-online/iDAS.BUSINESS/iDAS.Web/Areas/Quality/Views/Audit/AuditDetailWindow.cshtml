@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@{
    var auditPlanId = ViewData["auditPlanId"];
    var id = ViewData["id"];
}
@(Html.X().Window()
    .ID("WindowAuditDetail")
    .Title("Xem chi tiết kết quả đánh giá")
    .Icon(Icon.Zoom)
    .Height(1)
    .Maximized(true)
    .Constrain(true)
    .Layout(LayoutType.Border)
    .Modal(true)
    .BodyPadding(0)
    .Border(true)
    .Resizable(false)
    .Center()
    .Items(
            Html.X().Panel()
                .Region(Region.West)
                .Width(400)
                .Title("KẾT QUẢ ĐÁNH GIÁ CHUNG")   
                .Split(true)
                .Border(true)
                .Margin(1)
                .TitleAlign(TitleAlign.Center)
                .Layout(LayoutType.Fit)
                .Collapsible(true)
                .Header(false)
                    .ItemsFromAction("Detail", "Audit", new { area = "Quality", id = id, auditPlanId = auditPlanId }),
            Html.X().Panel()
                .Header(false)
                .ItemID("PanelResult")
                .Region(Region.Center)
                .Border(true)
                .Margin(1)
                .Split(true)
                .Layout(LayoutType.Fit)
                .ItemsFromAction("DetailResult", "Audit", new { area = "Quality" })
                )
           .Buttons(           
            Html.X().ButtonExit()
        )
    
)