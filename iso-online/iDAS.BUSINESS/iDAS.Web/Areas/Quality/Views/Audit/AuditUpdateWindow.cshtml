@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@{
    var id = ViewData["id"];    
 }
@(Html.X().Window()
    .ID("WindowAuditUpdate")
    .Title("Cập nhật kết quả đánh giá")
    .Icon(Icon.Pencil)
    .Height(1)
    .Maximized(true)
    .Constrain(true)
    .Layout(LayoutType.Border)
    .Modal(true)
    .BodyPadding(0)
    .Border(true)
    .Resizable(false)
    .Center()
    .Items(
            Html.X().Panel()
                .Region(Region.West)
                .Width(400)
                .Title("KẾT QUẢ ĐÁNH GIÁ CHUNG")   
                .Split(true)
                .Border(true)
                .Margin(1)
                .TitleAlign(TitleAlign.Center)
                .Layout(LayoutType.Fit)
                .Collapsible(true)
                .Header(false)
                    .ItemsFromAction("Edit", "Audit", new { area = "Quality", id = id }),
            Html.X().Panel()
                .Header(false)
                .ItemID("PanelResult")
                .Region(Region.Center)
                .Border(true)
                .Margin(1)
                .Split(true)
                .Layout(LayoutType.Fit)
                .ItemsFromAction("Result", "Audit", new { area = "Quality" })
    )
           .Buttons(
            Html.X().ButtonSave()
                .ID("btnSaveAudit")
                .DirectEvents(de =>
                {
                    de.Click.ExtraParams.Add(new { val = true });
                    de.Click.Before = @"if (!App.frAudit.getForm().isValid()) { return false; } ";               
                    de.Click.Action = "Update";         
                    de.Click.FormID = "frAudit";
                    de.Click.Success = "if(result.result){this.up('window').close();}";

                }),
            Html.X().ButtonExit()
            
        )
    
)