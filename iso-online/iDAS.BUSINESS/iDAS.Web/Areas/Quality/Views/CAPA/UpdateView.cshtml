@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.QualityCAPAItem
@(Html.X().ApprovalSendWindow()
           .UrlSubmit(Url.Action("Update", "CAPA", new { area = "Quality" }))
           .ItemsExtend(
                Html.X().TabPanel()
                    .ActiveTabIndex(0)
                    .Border(true)
                    .Items(
                        Html.X().FormPanel()
                                .AutoScroll(true)
                                .Title("Nội dung khắc phục phòng ngừa")
                                .Layout(LayoutType.VBox)
                                .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                                .Frame(true)
