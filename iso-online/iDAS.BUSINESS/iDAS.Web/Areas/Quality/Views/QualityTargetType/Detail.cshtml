@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend;
@model iDAS.Items.QualityTargetTypeItem
@(Html.X().Window()
              .ID("winEditTargetCategory")
          .Title("Xem chi tiết loại mục tiêu")
          .Icon(Icon.Zoom)
          .Height(300)
          .Width(500)
          .BodyPadding(6)
          .Constrain(true)
          .Modal(true)
          .Layout(LayoutType.Fit)
          .Items(
        Html.X().FormPanel()
                    .ID("frTargetCategory")
                .Layout(LayoutType.Form)
                .Frame(true)
                .StyleSpec("border: none;")
                .FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
        .Items(
        Html.X().HiddenFor(m => m.ID),
             Html.X().ComboBoxFor(m => m.QualityTargetCategoryID)
                               .ID("cbCategoryID").LabelWidth(120)
                           .FieldLabel("Nhóm mục tiêu" + Html.Required())
                           .BlankText("Nhóm mục tiêu không được trống")
                           .AnchorHorizontal("100%")
                           .Editable(false)
                           .AllowBlank(false)
                           .ReadOnly(true)
                           .TabIndex(1)
                           .QueryMode(DataLoadMode.Local)
                           .ForceSelection(true)
                           .DisplayField("Name")
                           .ValueField("ID")
                           .Store(Html.X().Store()
                           .ID("stTypeTarget")
                           .AutoLoad(true)
                           .Model(Html.X().Model()
                           .IDProperty("ID")
                           .Fields(
                                   new ModelField("ID", ModelFieldType.Int) { Mapping = "ID" },
                                   new ModelField("Name", ModelFieldType.String) { Mapping = "Name" }
                                   )
                                   )
                                   .Proxy(Html.X().AjaxProxy()
                                   .Url(Url.Action("GetData", "TargetCategory"))
                                   .Reader(Html.X().JsonReader().Root("data")
                                   )
                                   )
                                  ),                           
                                Html.X().TextFieldFor(m => m.Name)
                .FieldLabel("Tên loại mục tiêu" + Html.Required())
                .ID("txtName")
                     .ReadOnly(true)
                .AllowBlank(false)
                .LabelWidth(120)
                .AllowOnlyWhitespace(false),
        Html.X().ComboBoxFor(m => m.IsActive)
                .TabIndex(4)
                .LabelWidth(120)
                .Editable(false)
                .FieldLabel("Tình trạng" + Html.Required())
                .ID("cbIsUse")
                     .ReadOnly(true)
                .Items(
                    new ListItem("Sử dụng", true),
                    new ListItem("Không sử dụng", false)
                 ),
                   
         Html.X().TextAreaFor(m => m.Note)
                 .FieldLabel("Diễn giải")
                 .Height(130)
                 .LabelWidth(120)
                      .ReadOnly(true)
             )
            )
            .Buttons(           
            Html.X().ButtonExit()
            )
)