@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend;
@model iDAS.Items.QualityTargetCategoryItem
@(Html.X().Window()
              .ID("winEditTargetCategory")
          .Title("Xem chi tiết ")
          .Icon(Icon.Zoom)
          .Height(300)
          .Width(500)
          .BodyPadding(6)
          .Constrain(true)
          .Modal(true)
          .Layout(LayoutType.Fit)
          .Items(
        Html.X().FormPanel()
                    .ID("frTargetCategory")
                .Layout(LayoutType.Form)
                .Frame(true)
                .StyleSpec("border: none;")
                .FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
        .Items(
        Html.X().HiddenFor(m => m.ID),             
                                Html.X().TextFieldFor(m => m.Name)
                .FieldLabel("Tên nhóm mục tiêu")
                .ID("txtName")
                     .ReadOnly(true)
                .AllowBlank(false)
                .LabelWidth(120)
                .AllowOnlyWhitespace(false),
        Html.X().ComboBoxFor(m => m.IsActive)
                .TabIndex(4)
                .LabelWidth(120)
                .Editable(false)
                .FieldLabel("Tình trạng")
                .ID("cbIsUse")
                     .ReadOnly(true)
                .Items(
                    new ListItem("Sử dụng", true),
                    new ListItem("Không sử dụng", false)
                 ),
                   
         Html.X().TextAreaFor(m => m.Description)
                 .FieldLabel("Mô tả")
                 .Height(130)
                 .LabelWidth(120)
                      .ReadOnly(true)
             )
            )
            .Buttons(           
            Html.X().ButtonExit()
            )
)