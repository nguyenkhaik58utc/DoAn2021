@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.QualityCAPARequireItem


@( Html.X().Window()
    .ID("WindowNCDetail")
    .Title("Xem chi tiết yêu cầu khắc phục phòng ngừa")
    .Icon(Icon.Zoom)
    .Layout(LayoutType.Fit)
    .Width(800)
    .Height(520)
    .Constrain(true)
    .Modal(true)
    .Resizable(false)
    .Border(true)
    .BodyPadding(0)
    .Center()
    .Items(
            Html.X().FormPanel()
                    .AutoScroll(true)
                    .Layout(LayoutType.VBox)
                    .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                    .Frame(true)
                    .FieldDefaults(df => { df.LabelWidth = 110; })
                    .PaddingSpec("5 10 0 10")
                    .StyleSpec("border: none;")
                    .Items(
                            Html.X().TextFieldFor(m => m.Name).ReadOnly(true)
                                    .FieldLabel("Tên yêu cầu")
                                    .AllowBlank(false)
                                    .BlankText("Nội dung này không được bỏ trống!"),
                            Html.X().TextFieldFor(m => m.Code).ReadOnly(true)
                                    .FieldLabel("Mã yêu cầu")
                                    .AllowBlank(false)
                                    .BlankText("Nội dung này không được bỏ trống!"),
                            Html.X().DepartmentFieldFor(m => m.Department).AllowBlank(false).ReadOnly(true)
                                    .FieldLabel("Phòng ban")
                                    .Height(25).PaddingSpec("0 2 0 0")
                                    ,
                            Html.X().EmployeeBoxFor(m => m.Represent).FieldLabel("Người đại diện").LabelWidth(110)
                            .ReadOnly(true),
                            Html.X().Container().Layout(LayoutType.Column).Height(25)
                                .Items(
                                        Html.X().DateTimeFieldFor(m => m.CompleteTime).AllowBlank(false).ReadOnly(true)
                                                .FieldLabel("Thời gian hoàn thành").ColumnWidth(0.5)),
                            Html.X().TextAreaFor(m => m.Content).ReadOnly(true)
                                .FieldLabel("Nội dung yêu cầu")
                                .BlankText("Nội dung không được để trống")
                                .EmptyText("Nội dung yêu cầu")
                                .MinHeight(70).Flex(1)
                        )
            ) 
                                     
    .Buttons(
       
        Html.X().ButtonExit()
    )
)
