@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Web.ExtExtend;
@model iDAS.Items.CenterISOIndexCriteriaItem

@(
 Html.X().Window()
    .ID("winDetailISOCriteria")
    .Title("Xem chi tiết thông tin tiêu chí điều khoản")
    .Icon(Icon.Zoom)
    .Width(450)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
    Html.X().FormPanel()
        .ID("frmDetailIsostandard")
        .Layout(LayoutType.Form)
        .Frame(true)
        .Border(false)
        .StyleSpec("border: none;")
        .FieldDefaults(df => { df.LabelWidth = 80; df.ReadOnly = true; })
        .DefaultAnchor("100%")
        .Items(
          Html.X().TextFieldFor(m => m.Name).ID("txtName")
                .FieldLabel("Tiêu chí *").ReadOnly(true)
                .AllowBlank(false).BlankText("Tiêu chí bắt buộc nhập!"),
            Html.X().TextAreaFor(m => m.Content).ID("txtNote")
                .FieldLabel("Nội dung").ReadOnly(true)
                .Height(100))
                )
        .Buttons(
            Html.X().ButtonExit()
        )
)