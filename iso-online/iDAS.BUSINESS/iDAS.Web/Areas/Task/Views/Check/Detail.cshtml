@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.TaskCheckItem
@{
    int taskId = (int)ViewData["TaskID"];
}
@(
 Html.X().Window()
        .ID("winAddTaskCheck")
        .Title("Xem chi tiết phiếu kiểm tra công việc thực hiện")
        .Icon(Icon.Zoom)
        .Width(650)
        .Height(450)
        .Maximizable(true)
        .BodyPadding(5)
        .Constrain(true)
        .Modal(true)
        .Resizable(false)
        .Layout(LayoutType.Fit)
        .Center()
        .Items(
            Html.X().FormPanel()
                .ID("frmTaskCheck")
                .Frame(true)
                .Border(false)
                .StyleSpec("border:none")
                .Layout(LayoutType.VBox)
                .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
                .Items(
                    Html.X().HiddenFor(m => m.TaskID)
                        .ID("txtTaskID"),
                                     Html.X().DateTimeFieldFor(m => m.Time)
                            .AllowBlank(false)
                            .ReadOnly(true)
                             .FieldLabel("Thời gian kiểm tra")
                             .MarginSpec("3 0 3 0"),
                        Html.X().TextAreaFor(m => m.Content)
                        .ID("txtCheckContent")
                        .AllowOnlyWhitespace(false)
                        .FieldLabel("Nội dung")
                        .AllowBlank(false)
                        .ReadOnly(true)
                        .TabIndex(2)
                        .BlankText("Nội dung Báo cáo Công việc không được để trống!")
                        .EmptyText("Nhập Nội dung kiểm tra công việc...")
                        .Flex(1),
                              Html.X().TextAreaFor(m => m.Feedback)
                                            .ID("txtCheckFeedback")
                                            .FieldLabel("Phản hồi")
                                            .TabIndex(3)
                                                 .ReadOnly(true)
                                            .EmptyText("Nhập Nội dung đề xuất, phản hồi...")
                                            .Height(110),
                    Html.X().Container()
                        .Layout(LayoutType.HBox)
                        .MarginSpec("0 0 0 0")
                        .Items(
                        Html.X().NumberFieldFor(m => m.Rate)
                                .ReadOnly(true)
                                .ID("txtPercentComplete")
                                .MarginSpec("0 10 0 0")
                                .FieldLabel("% Hoàn thành")
                                .TabIndex(4)
                                .MinValue(0)
                                .MaxValue(100)
                                .AllowBlank(false)
                                .BlankText("% Hoàn thành Công việc không được bỏ trống!"),
                            Html.X().CheckboxFor(m => m.IsComplete)
                                .ReadOnly(true)
                                .ID("chbFinish")
                                .TabIndex(5)
                                .LabelAlign(LabelAlign.Right)
                                .HideLabel(true)
                                .FieldLabel("Hoàn thành")
                                .BoxLabel("(Hoàn thành công việc)")
                        )
                )
            )
            .Buttons(
                Html.X().ButtonExit()
            )
)
