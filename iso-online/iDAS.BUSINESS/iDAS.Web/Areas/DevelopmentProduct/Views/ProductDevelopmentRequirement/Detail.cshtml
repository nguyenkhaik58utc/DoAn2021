@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.ProductDevelopmentRequirementItem
@(Html.X().Window()
.ID("winNewProcDev")
.Title("Chi tiết yêu cầu phát triển sản phẩm")
.Icon(Icon.Zoom)
.Width(650)
.BodyPadding(6)
.Constrain(true)
.Modal(true)
.Layout(LayoutType.Fit)
.Items(
Html.X().FormPanel()
.ID("frProcDev")
.Layout(LayoutType.Anchor)
.Frame(true)
.StyleSpec("border: none;")
.FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
.Items(
Html.X().Container()
        .Layout(LayoutType.Form)
        .Items(
               Html.X().TextFieldFor(m => m.StockProductName)
                .FieldLabel("Sản phẩm").ReadOnly(true)
            .ID("txtCode")
            .AllowBlank(false)
                .BlankText("Tên sản phẩm yêu cầu không được bỏ trống")
            .AllowOnlyWhitespace(false)
            .TabIndex(2).ReadOnly(true),
                Html.X().TextFieldFor(m => m.DevelopmentFromProductName).ReadOnly(true)
                    .FieldLabel("Phát triển từ")
                    .ID("txtStockProductDisp")
                    .TabIndex(2).ReadOnly(true),
            Html.X().TextAreaFor(m => m.Reason).ReadOnly(true)
                .FieldLabel("Lý do")
                .ID("txtReason")
                .Height(80)
                .AnchorHorizontal("100%")
                .TabIndex(5)
                    ),
                        Html.X().FileUploadFieldFor(m => m.AttachmentFiles).ReadOnly(true),
                    Html.X().TextAreaFor(m => m.Contents).ReadOnly(true)
                .FieldLabel("Nội dung")
                .ID("txtContents")
                .Height(140)
                .AnchorHorizontal("100%")
                .TabIndex(5)

             )
        )
        .Buttons(
        
        Html.X().ButtonExit()
        )
)