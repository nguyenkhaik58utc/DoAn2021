@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web;
@using iDAS.Utilities
@model iDAS.Items.AccountingDebtTypeItem
@{
    var X = Html.X();
}
@(Html.X().Window()
.Title("Chi tiết phân loại nợ")
.ID("winDebtType")
.Icon(Icon.Zoom)
.Width(600)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Border(true)
.Modal(true)
.Resizable(false)
.Items(
                 X.FormPanel()
                .Border(false)
                .Layout(LayoutType.Column)
                .Frame(true)
                .StyleSpec("border: none;")
                     .FieldDefaults(df => { df.LabelAlign = LabelAlign.Left; df.LabelWidth = 100; })
                .Items(
                    X.TextFieldFor(m => m.Name).FieldLabel("Phân loại nợ" )
                            .EmptyText("Phân loại nợ...")
                            .BlankText("Phân loại nợ không được bỏ trống!")
                            .AllowOnlyWhitespace(false).ReadOnly(true)
                            .ColumnWidth(1)
                            .MarginSpec("5 8 0 8"),
                    X.NumberFieldFor(m => m.Day).MinValue(0).ReadOnly(true).ColumnWidth(0.8).FieldLabel("Số ngày quá hạn")
                    .Icon(Icon.Calendar).AllowBlank(false).MarginSpec("5 8 0 8"), X.Label().Text("Ngày").MarginSpec("5 8 0 0").ColumnWidth(0.2),
                    X.NumberFieldFor(m => m.Value).ReadOnly(true).MinValue(0).ColumnWidth(0.8).FieldLabel("Định mức")
                    .Icon(Icon.Money).MarginSpec("5 8 0 8"), X.Label().Text("(VNĐ)").MarginSpec("5 8 0 0").ColumnWidth(0.2),        
                    X.CheckboxFor(m => m.IsActive).FieldLabel("Kích hoạt")
                                    .ColumnWidth(0.5).ReadOnly(true)
                                    .MarginSpec("5 8 0 8"),
                    X.TextAreaFor(m => m.Note).FieldLabel("Ghi chú").ReadOnly(true)
                            .EmptyText("Nhập ghi chú...")
                            .ColumnWidth(1).Height(100)
                            .MarginSpec("5 8 0 8")
                    )
)
.Buttons( Html.X().Button().Text("Đóng").Icon(Icon.Cancel).TabIndex(15).OnClientClick("this.up('window').close();"))
)