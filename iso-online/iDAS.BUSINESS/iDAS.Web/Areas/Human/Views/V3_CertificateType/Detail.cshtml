@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Web.Areas.Human.Models.V3_Category.V3_CertificateTypeResponse
@(Html.X().Window()
    .ID("DetailCertificateTypeWindow")
    .Title("Thông tin loại chứng chỉ")
    .Icon(Icon.Pencil)
    .BodyPadding(0)
    .Width(550)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .ID("DetailCertificateTypeForm")
            .Layout(LayoutType.Form)
            .Frame(true)
            .Border(false)
            .MarginSpec("0 10 10 10")
            .StyleSpec("border: none;")
            .FieldDefaults(df => df.LabelWidth = 100)
            .DefaultAnchor("100%")
            .Items(
                                Html.X().TextAreaFor(m => m.ID).Hidden(true),
                                Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên loại chứng chỉ" + Html.Required())
                                    .EmptyText("Nhập tên loại chứng chỉ").ReadOnly(true).LabelWidth(120)
                                    .BlankText("Bạn phải nhập tên loại chứng chỉ!")
                                    .AllowBlank(true).AllowOnlyWhitespace(false)
            )
    )
)
