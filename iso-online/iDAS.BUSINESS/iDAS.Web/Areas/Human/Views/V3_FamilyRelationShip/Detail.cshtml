@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Web.Areas.Human.Models.V3_Category.V3_FamilyRelationShipResponse
@(Html.X().Window()
    .ID("DetailFamilyRelationShipWindow")
    .Title("Thông tin loại quan hệ gia đình")
    .Icon(Icon.Pencil)
    .BodyPadding(0)
    .Width(550)
    .Margin(0)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .ID("DetailFamilyRelationShipForm")
             .Layout(LayoutType.Form)
    .Frame(true)
    .Border(false)
    .MarginSpec("0 -4 -3 -4")
    .StyleSpec("border: none;")
    .FieldDefaults(df => df.LabelWidth = 110)
    .DefaultAnchor("100%")
            .Items(
              Html.X().TextAreaFor(m => m.ID).Hidden(true).Width(450).MarginSpec("0 8 0 8"),
              Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên loại quan hệ" + Html.Required())
                  .EmptyText("Nhập tên loại quan hệ")
                  .BlankText("Bạn phải nhập tên loại quan hệ gia đình!")
                  .AllowBlank(true).AllowOnlyWhitespace(false).ReadOnly(true).Width(520).MarginSpec("0 8 0 8")
            )
    )
)