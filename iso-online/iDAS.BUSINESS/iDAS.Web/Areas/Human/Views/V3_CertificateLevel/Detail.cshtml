@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Web.Areas.Human.Models.V3_Category.V3_CertificateLevelResponse
@(Html.X().Window()
    .ID("DetailCertificateLevelWindow")
    .Title("Thông tin xếp loại chứng chỉ")
    .Icon(Icon.Pencil)
    .BodyPadding(0)
    .Width(550)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .ID("DetailCertificateLevelForm")
            .Layout(LayoutType.Form)
            .Frame(true)
            .Border(false)
            .MarginSpec("0 10 10 10")
            .StyleSpec("border: none;")
            .FieldDefaults(df => df.LabelWidth = 100)
            .DefaultAnchor("100%")
            .Items(
                                Html.X().TextAreaFor(m => m.ID).Hidden(true),
                                Html.X().TextFieldFor(m => m.Name).ReadOnly(true).FieldLabel("Tên xếp loại chứng chỉ" + Html.Required())
                                    .EmptyText("Nhập tên xếp loại chứng chỉ").LabelWidth(140)
                                    .BlankText("Bạn phải nhập tên xếp loại chứng chỉ!")
                                    .AllowBlank(true).AllowOnlyWhitespace(false)
            )
    )
)
