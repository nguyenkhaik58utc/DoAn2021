@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.HumanProfileAttachItem
@{
    var X = Html.X();
}
@(Html.X().CustomWindow()
    .ID("WinDetailAttachment")
    .Title("Hồ sơ đính kèm")
    .Icon(Icon.Zoom)
    .Items(
        Html.X().CustomFormPanel()
        .Items(
           X.TextFieldFor(m => m.Name).FieldLabel("Tên tài liệu").Width(450).ReadOnly(true),
           X.FileUploadFieldFor(m=>m.AttachmentFiles).ReadOnly(true),
           X.TextFieldFor(m => m.Note).FieldLabel("Ghi chú").Width(450).ReadOnly(true)
           )
    )
    .Buttons(Html.X().ButtonExit())
)

