@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Web.Areas.Human.Models.V3_HumanProfileRewardResponse
@{
    var X = Html.X();
}
@(Html.X().Window()
.ID("WinUpdate")
.Title("Hồ sơ khen thưởng")
.Icon(Icon.Pencil)
.Width(500)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Modal(true)
.Resizable(false)
.Items(
    Html.X().FormPanel()
    .ID("frmUpdate")
    .Layout(LayoutType.Form)
    .Frame(true)
    .Border(false)
    .MarginSpec("0 -4 -3 -4")
    .StyleSpec("border: none;")
    .FieldDefaults(df => df.LabelWidth = 150)
    .DefaultAnchor("100%")
    .Items(
                X.TextFieldFor(m => m.NumberOfDecision).FieldLabel("Số quyết định").MarginSpec("0 8 0 8").Width(450).ReadOnly(true),
                    X.DateFieldFor(m => m.DateOfDecision).FieldLabel("Ngày quyết định").MarginSpec("0 8 0 8").Width(450).ReadOnly(true),
                    X.TextFieldFor(m => m.Reason).FieldLabel("Lý do khen thưởng").MarginSpec("0 8 0 8").Width(450).ReadOnly(true),
                    X.TextFieldFor(m => m.AwardCategoryName).FieldLabel("Hình thức khen thưởng").MarginSpec("0 8 0 8").Width(450).ReadOnly(true)
           )
    )
    .Buttons(Html.X().ButtonExit())
)
