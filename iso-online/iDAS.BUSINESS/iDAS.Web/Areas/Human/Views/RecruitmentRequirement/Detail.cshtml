@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.HumanRecruitmentRequirementItem
@(
 Html.X().ApprovalDetailWindow()
        .ItemsExtend(
           Html.X().FormPanel()
            .AutoScroll(true)
            .Layout(LayoutType.VBox)
            .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
            .Frame(true)
            .FieldDefaults(df => { df.LabelWidth = 120; df.LabelStyle = "padding-left: 5px;"; })
            .PaddingSpec("5 10 0 0")
            .StyleSpec("-webkit-border-radius: 0; border-radius: 0;")
            .Items(
                    Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên đề nghị").ReadOnly(true),
                    Html.X().NumberFieldFor(m => m.Number).FieldLabel("Số lượng").ReadOnly(true),
                    Html.X().NumberFieldFor(m => m.NumberIsEmployee).FieldLabel("Số lượng đã tuyển").ReadOnly(true),
                    Html.X().DateFieldFor(m => m.DateRequired).FieldLabel("Thời gian cần").ReadOnly(true),
                    Html.X().TextFieldFor(m => m.Form).FieldLabel("Hình thức tuyển dụng").ReadOnly(true),
                    Html.X().TextFieldFor(m => m.Role.Name).FieldLabel("Vị trí tuyển dụng").ReadOnly(true),
                    Html.X().TextFieldFor(m => m.Role.Department).FieldLabel("Phòng ban").ReadOnly(true),
                    Html.X().TextAreaFor(m => m.Reason).FieldLabel("Lý do tuyển dụng").MinHeight(100).Flex(1)
            )
        )
)