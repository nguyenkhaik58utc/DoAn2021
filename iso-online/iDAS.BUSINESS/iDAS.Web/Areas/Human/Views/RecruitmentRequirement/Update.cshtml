@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@using iDAS.Utilities
@model iDAS.Items.HumanRecruitmentRequirementItem
@(Html.X().ApprovalSendWindow()
    .UrlSubmit(Url.Action("Update"))
    .ItemsExtend(
        Html.X().FormPanel()
            .AutoScroll(true)
            .Layout(LayoutType.VBox)
            .LayoutConfig(new VBoxLayoutConfig { Align = VBoxAlign.Stretch })
            .Frame(true)
            .FieldDefaults(df => { df.LabelWidth = 120; df.LabelStyle = "padding-left: 5px;"; })
            .PaddingSpec("5 10 0 0")
            .StyleSpec("-webkit-border-radius: 0; border-radius: 0;")
            .Items(
                        Html.X().HiddenFor(m => m.ID).ID("hdfRequirementId"), Html.X().HiddenFor(m => m.CreateByName), Html.X().HiddenFor(m => m.CreateUserID),
                    Html.X().TextFieldFor(m => m.Name)
                        .FieldLabel("Tên đề nghị" + Html.Required())
                        .EmptyText("Nhập đề nghị tuyển dụng...")
                        .AllowBlank(false)
                        .BlankText("đề nghị tuyển dụng không được bỏ trống!"),
                    Html.X().Container().Layout(LayoutType.Column).MarginSpec("0 0 4 0")
                        .Items(

                                Html.X().NumberFieldFor(m => m.Number)
                                        .FieldLabel("Số lượng" + Html.Required())
                                    .ColumnWidth(0.55)
                                    .EmptyText("Nhập số lượng nhân sự...")
                                    .BlankText("Số lượng không được bỏ trống!")
                                    .AllowBlank(false),
                                Html.X().DateFieldFor(m => m.DateRequired)
                                    .LabelWidth(100)
                                    .FieldLabel("Thời gian cần" + Html.Required())
                                    .ColumnWidth(0.45)
                                    .AllowBlank(false)
                                    .EmptyText("Nhập thời gian cần nhân sự...")
                                    .BlankText("Thời gian cần không được bỏ trống!")
                        ),
                    Html.X().TextFieldFor(m => m.Form).FieldLabel("Hình thức tuyển dụng"),
                    Html.X().RoleFieldFor(m => m.Role).FieldLabel("Chức danh" + Html.Required())
                                .AllowBlank(false).MarginSpec("0 -1 4 0").Height(25),
                    Html.X().TextAreaFor(m => m.Reason)
                        .FieldLabel("Lý do tuyển dụng")
                        .EmptyText("Nhập lý do tuyển dụng...")
                        .Flex(1)

            )
    )
    .ID("winRequirementUpdate")
)
