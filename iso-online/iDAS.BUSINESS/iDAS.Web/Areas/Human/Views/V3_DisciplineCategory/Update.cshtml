@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Web.Areas.Human.Models.V3_Category.V3_DisciplineCategoryResponse
@(Html.X().Window()
    .ID("UpdateDisciplineCategoryWindow")
    .Title("Sửa thông tinhình thức kỉ luật")
    .Icon(Icon.Pencil)
    .BodyPadding(0)
    .Width(550)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .ID("UpdateDisciplineCategoryForm")
            .Url(Url.Action("Update"))
         .Layout(LayoutType.Form)
    .Frame(true)
    .Border(false)
    .MarginSpec("0 -4 -3 -4")
    .StyleSpec("border: none;")
    .FieldDefaults(df => df.LabelWidth = 130)
    .DefaultAnchor("100%")
            .Items(
                                Html.X().TextAreaFor(m => m.ID).Hidden(true),
                                Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên hình thức kỉ luật" + Html.Required())
                                    .EmptyText("Nhập tên hình thức kỉ luật")
                                    .BlankText("Bạn phải nhập tên hình thức kỉ luật!")
                                    .AllowBlank(true).AllowOnlyWhitespace(false).Width(520).MarginSpec("0 8 0 8")
            )
    )
    .Buttons(
        Html.X().ButtonSave().Handler("updateDisciplineCategorySubmit"),
        Html.X().ButtonExit().Handler("this.up('window').close();")
    )
)
<script>
    var updateDisciplineCategorySubmit = function () {
        App.UpdateDisciplineCategoryForm.submit({
            waitMsg: "Đang thực hiện ....",
            success: function (result) {
                if (result) {
                    reloadDisciplineCategory();
                    App.UpdateDisciplineCategoryWindow.close();
                }
            }
        });
    };
</script>
