@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Web.Areas.Human.Models.V3_Category.V3_ContractTypeResponse
@(Html.X().Window()
    .ID("UpdateContractTypeWindow")
    .Title("Sửa thông tin loại hợp đồng")
    .Icon(Icon.Pencil)
    .BodyPadding(0)
    .Width(550)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .ID("UpdateContractTypeForm")
            .Url(Url.Action("Update"))
                   .Layout(LayoutType.Form)
    .Frame(true)
    .Border(false)
    .MarginSpec("0 -4 -3 -4")
    .StyleSpec("border: none;")
    .FieldDefaults(df => df.LabelWidth = 120)
    .DefaultAnchor("100%")
            .Items(
                                Html.X().TextAreaFor(m => m.ID).Hidden(true),
                                Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên loại hợp đồng" + Html.Required())
                                    .EmptyText("Nhập tên loại hợp đồng")
                                    .BlankText("Bạn phải nhập tên loại hợp đồng!")
                                    .AllowBlank(true).AllowOnlyWhitespace(false).Width(520).MarginSpec("0 8 0 8")
            )
    )
    .Buttons(
        Html.X().ButtonSave().Handler("updateContractTypeSubmit"),
        Html.X().ButtonExit().Handler("this.up('window').close();")
    )
)
<script>
    var updateContractTypeSubmit = function () {
        App.UpdateContractTypeForm.submit({
            waitMsg: "Đang thực hiện ....",
            success: function (result) {
                if (result) {
                    reloadContractType();
                    App.UpdateContractTypeWindow.close();
                }
            }
        });
    };
</script>
