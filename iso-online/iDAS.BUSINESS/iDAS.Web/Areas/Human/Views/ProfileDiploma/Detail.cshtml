@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.HumanProfileDiplomaItem
    @{
        var X = Html.X();
    }
    @(Html.X().Window()
.Title("Hồ sơ văn bằng")
.Icon(Icon.Pencil)
.Width(700)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Modal(true)
.Resizable(false)
.Items(
    Html.X().FormPanel()
    .ID("frmUpdate")
    .Layout(LayoutType.Form)
    .Frame(true)
    .Border(false)
    .MarginSpec("0 -4 -3 -4")
    .StyleSpec("border: none;")
    .FieldDefaults(df => df.LabelWidth = 200)
    .DefaultAnchor("100%")
    .Items(
                X.TextFieldFor(m => m.Name).FieldLabel("Tên văn bằng").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                    X.TextFieldFor(m => m.Faculty).FieldLabel("Khoa").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                    X.TextFieldFor(m => m.Major).FieldLabel("Chuyên nghành").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                            X.DateFieldFor(m => m.StartDate).FieldLabel("Ngày bắt đầu học văn bằng").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                            X.DateFieldFor(m => m.EndDate).FieldLabel("Ngày kết thúc học văn bằng").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                    X.TextFieldFor(m => m.Level).FieldLabel("Trình độ").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                    X.TextFieldFor(m => m.FormOfTrainning).FieldLabel("Hình thức đào tạo").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                    X.TextFieldFor(m => m.Rank).FieldLabel("Xếp loại").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                    X.TextFieldFor(m => m.Place).FieldLabel("Nơi đào tạo").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                    X.TextFieldFor(m => m.Condition).FieldLabel("Tình trạng tốt nghiệp").MarginSpec("0 8 0 8").Width(650).ReadOnly(true),
                    X.DateFieldFor(m => m.DateOfGraduation).FieldLabel("Ngày nhận bằng").MarginSpec("0 8 0 8").Width(650).ReadOnly(true)
           )
    )
    .Buttons(Html.X().ButtonExit())
    )

