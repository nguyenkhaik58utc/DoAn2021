@using Ext.Net;
@using Ext.Net.MVC;

@{
    var X = Html.X();
    var employeeId = ViewData["Id"];
    employeeId = employeeId == null ? Guid.Empty : employeeId;
}
@(X.Window()
    .ID("winPreviewProfileEmployee")
    .Title("Thông tin chi tiết nhân sự")
    .Layout(LayoutType.Fit)
    .AutoScroll(true)
    .Maximized(true)
    .IconCls("x-fa fa-info-circle")
    .Modal(true).Constrain(true)
    .Maximizable(false)
    .Closable(true)
    .Shadow(true)
    .Loader(
        Html.X().ComponentLoader()
        .Url("/ReportDesigner/ViewReport.aspx?emp=" + employeeId)
            .Mode(LoadMode.Frame)
    ).Buttons(
        //X.ButtonExit()
    )
)
