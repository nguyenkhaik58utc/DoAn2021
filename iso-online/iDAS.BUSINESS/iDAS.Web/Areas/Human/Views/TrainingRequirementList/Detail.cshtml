@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.HumanTrainingRequirementListItem
@(Html.X().Window()
.ID("winRequirementDetail")
.Title("Xem chi tiết nhân sự tham gia đào tạo")
.Width(800)
.MaxHeight(600)
.Icon(Icon.Zoom)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Modal(true)
.Resizable(false)
.Items(
    Html.X().FormPanel()
    .ID("frmDetail")
    .Layout(LayoutType.Column)
    .Frame(true)
    .MarginSpec("0 -4 0 0")
    .BodyPadding(0)
    .StyleSpec("border: none;")
    .FieldDefaults(df => { df.LabelWidth = 110; })
    .Items(
                Html.X().EmployeeFieldFor(m => m.Employee)
                    .ReadOnly(true)
                    .Title("Nhân sự tham gia")
                    .ColumnWidth(1)
                    .MarginSpec("5 4 0 4"),
                Html.X().DateTimeFieldFor(m => m.StartTime).ReadOnly(true)
                        .FieldLabel("Thời gian đào tạo").ColumnWidth(0.6).MarginSpec("5 4 0 4"),
                Html.X().DateTimeFieldFor(m => m.EndTime).ReadOnly(true)
                        .FieldLabel("kết thúc").LabelWidth(60).ColumnWidth(0.4).MarginSpec("5 4 0 8"),
                Html.X().TextAreaFor(m => m.Content).ReadOnly(true)
                    .FieldLabel("Nội dung đào tạo")
                    .EmptyText("Nhập nội dung đề nghị ...")
                    .ColumnWidth(1).MarginSpec("5 4 0 4").Height(80),
                Html.X().TextAreaFor(m => m.Note).ReadOnly(true)
                    .FieldLabel("Ghi chú")
                    .EmptyText("Nhập ghi chú ...")
                    .ColumnWidth(1).MarginSpec("5 4 0 4").MinHeight(80)
           )
      )
    .Buttons(
        Html.X().ButtonExit())
)