@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.HumanProfileWorkExperienceItem
    @{
        var X = Html.X();
    }
@(Html.X().Window()
.ID("WinUpdate")
.Title("Hồ sơ quá trình công tác")
.Icon(Icon.Zoom)
.Width(620)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Modal(true)
.Resizable(false)
.Items(
    Html.X().FormPanel()
    .ID("frmUpdate")
    .Layout(LayoutType.Form)
    .Frame(true)
    .Border(false)
    .StyleSpec("border: none;")
    .FieldDefaults(df => { df.LabelWidth = 120; df.InputWidth = 450; })
    .DefaultAnchor("100%")
    .Items(
              
                X.TextFieldFor(m => m.Position).FieldLabel("Chức vụ đảm nhiệm").MarginSpec("0 8 0 8").ReadOnly(true),
                X.TextFieldFor(m => m.JobDescription).FieldLabel("Công việc").MarginSpec("0 8 0 8").ReadOnly(true),
                X.TextFieldFor(m => m.Department).FieldLabel("Phòng ban").MarginSpec("0 8 0 8").ReadOnly(true),
                X.TextFieldFor(m => m.PlaceOfWork).FieldLabel("Nơi công tác").MarginSpec("0 8 0 8").ReadOnly(true) ,
                X.DateFieldFor(m => m.StartDate).FieldLabel("Ngày bắt đầu công tác").MarginSpec("0 8 0 8").ReadOnly(true),
                X.DateFieldFor(m => m.EndDate).FieldLabel("Ngày kết thúc công tác").MarginSpec("0 8 0 8").ReadOnly(true)
           )
    )
        .Buttons(Html.X().ButtonExit())
)

