@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.HumanProfileRelationshipItem
    @{
        var X = Html.X();
    }
    @(Html.X().Window()
.ID("WinUpdate")
.Title("Hồ sơ quan hệ gia đình")
.Icon(Icon.Pencil)
.Width(600)
.BodyPadding(0)
.Margin(0)
.Constrain(true)
.Layout(LayoutType.Fit)
.Modal(true)
.Resizable(false)
.Items(
    Html.X().FormPanel()
    .ID("frmUpdate")
    .Layout(LayoutType.Form)
    .Frame(true)
    .Border(false)
    .MarginSpec("0 -4 -3 -4")
    .StyleSpec("border: none;")
    .FieldDefaults(df => df.LabelWidth = 100)
    .DefaultAnchor("100%")
    .Items(
                X.TextFieldFor(m => m.Name).FieldLabel("Họ tên").MarginSpec("0 8 0 8").Width(550).ReadOnly(true),
                X.TextFieldFor(m => m.Age).FieldLabel("Năm sinh").MarginSpec("0 8 0 8").Width(550).ReadOnly(true),
                X.TextFieldFor(m => m.sex).FieldLabel("Giới tính").MarginSpec("0 8 0 8").Width(550).ReadOnly(true),
                X.TextFieldFor(m => m.Relationship).FieldLabel("Quan hệ").MarginSpec("0 8 0 8").Width(550).ReadOnly(true),
                X.TextFieldFor(m => m.Job).FieldLabel("Nghề nghiệp").MarginSpec("0 8 0 8").Width(550).ReadOnly(true),
                X.TextFieldFor(m => m.PlaceOfJob).FieldLabel("Nơi công tác").MarginSpec("0 8 0 8").Width(550).ReadOnly(true),
                X.TextFieldFor(m => m.Phone).FieldLabel("Số điện thoại").MarginSpec("0 8 0 8").Width(550).ReadOnly(true),
                X.TextFieldFor(m => m.Adress).FieldLabel("Địa chỉ").MarginSpec("0 8 0 8").Width(550).ReadOnly(true)
           )
    )
        .Buttons(Html.X().ButtonExit())
    )

