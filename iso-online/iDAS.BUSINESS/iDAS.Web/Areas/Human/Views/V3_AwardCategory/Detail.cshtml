@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Web.Areas.Human.Models.V3_Category.V3_AwardCategoryResponse
@(Html.X().Window()
    .ID("DetailAwardCategoryWindow")
    .Title("Thông tin hình thức khen thưởng")
    .Icon(Icon.Pencil)
    .BodyPadding(0)
    .Width(550)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .ID("DetailAwardCategoryForm")
            .Layout(LayoutType.Form)
            .Frame(true)
            .Border(false)
            .MarginSpec("0 10 10 10")
            .StyleSpec("border: none;")
            .FieldDefaults(df => df.LabelWidth = 100)
            .DefaultAnchor("100%")
            .Items(
                
                                Html.X().TextAreaFor(m => m.ID).Hidden(true).ReadOnly(true),
                                Html.X().TextFieldFor(m => m.Name).ReadOnly(true).FieldLabel("Tên hình thức khen thưởng" + Html.Required())
                                    .EmptyText("Nhập tên hình thức khen thưởng").LabelWidth(160)
                                    .BlankText("Bạn phải nhập tên hình thức khen tưởng!")
                                    .AllowBlank(true).AllowOnlyWhitespace(false)
            )
    )
)
