@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Web.Areas.Human.Models.V3_Category.V3_EducationLevelResponse
@(Html.X().Window()
    .ID("DetailEducationLevelWindow")
    .Title("Thông tin trình độ đào tạo")
    .Icon(Icon.Pencil)
    .BodyPadding(0)
    .Width(550)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .ID("DetailEducationLevelForm")
            .Layout(LayoutType.Form)
            .Frame(true)
            .Border(false)
            .MarginSpec("0 10 10 10")
            .StyleSpec("border: none;")
            .FieldDefaults(df => df.LabelWidth = 100)
            .DefaultAnchor("100%")
            .Items(
                                Html.X().TextAreaFor(m => m.ID).Hidden(true),
                                Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên trình độ đào tạo" + Html.Required())
                                    .EmptyText("Nhập tên trình độ đào tạo").ReadOnly(true).LabelWidth(140)
                                    .BlankText("Bạn phải nhập tên trình độ đào tạo!")
                                    .AllowBlank(true).AllowOnlyWhitespace(false)
            )
    )
)
