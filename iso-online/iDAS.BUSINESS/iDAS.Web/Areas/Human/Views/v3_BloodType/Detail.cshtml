@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Web.Areas.Human.Models.V3_Category.V3_BloodTypeResponse
@(Html.X().Window()
    .ID("DetailBloodTypeWindow")
    .Title("Thông tin nhóm máu")
    .Icon(Icon.Pencil)
    .BodyPadding(0)
    .Width(550)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .Border(false)
    .Items(
        Html.X().FormPanel()
            .ID("DetailBloodTypeForm")
            .Url(Url.Action("Update"))
            .Layout(LayoutType.Form)
            .Frame(true)
            .Border(false)
            .MarginSpec("0 10 10 10")
            .StyleSpec("border: none;")
            .FieldDefaults(df => df.LabelWidth = 100)
            .DefaultAnchor("100%")
            .Items(
                
                                Html.X().TextAreaFor(m => m.ID).Hidden(true).ReadOnly(true),
                                Html.X().TextFieldFor(m => m.Name).ReadOnly(true).FieldLabel("Tên nhóm máu" + Html.Required())
                                    .EmptyText("Nhập tên nhóm máu")
                                    .BlankText("Bạn phải nhập tên nhóm máu!")
                                    .AllowBlank(true).AllowOnlyWhitespace(false)
            )
    )
)
