@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.ProductionShiftItem
@(Html.X().CustomWindow()
    .Title("Chi tiết ca sản xuất")
    .Icon(Icon.Zoom)
    .Items(
          Html.X().CustomFormPanel()
                .Items(
                        Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên ca").ReadOnly(true)
                                .EmptyText("Tên ca...")
                                .BlankText("Tên ca không được bỏ trống!")
                                .AllowOnlyWhitespace(false),
                        Html.X().TimeFieldFor(m => m.StartTime).Format("HH:mm:ss").Icon(Icon.TimeGo).FieldLabel("Bắt đầu").ReadOnly(true),
                        Html.X().TimeFieldFor(m => m.EndTime).Format("HH:mm:ss").Icon(Icon.Time).FieldLabel("Kết thúc").ReadOnly(true),
                        Html.X().CheckboxFor(m => m.IsUse).FieldLabel("Sử dụng").ReadOnly(true)
                    )
)
.Buttons( Html.X().ButtonExit())
)
