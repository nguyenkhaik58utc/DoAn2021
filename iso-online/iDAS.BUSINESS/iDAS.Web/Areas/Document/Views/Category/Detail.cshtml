@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Utilities
@using iDAS.Web.ExtExtend
@model iDAS.Items.DocumentCategoryItem
@(
 Html.X().CustomWindow()
    .ID("winEditCate")
    .Title("Xem chi tiết danh mục tài liệu")
    .Icon(Icon.Zoom)
    .Items(
        Html.X().CustomFormPanel()
            .FieldDefaults(f=> f.ReadOnly=true)
            .ID("frmEditCate")
            .Items(
                    Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên danh mục" ),
                    Html.X().DepartmentFieldFor(m => m.Department).FieldLabel("Phòng ban").ReadOnly(true),  
                    Html.X().TextAreaFor(m => m.Note)
                        .ID("txtContent")
                        .FieldLabel("Ghi chú")
                        .TabIndex(3).MinHeight(100).Flex(1)
                        .MaxLength(1000),
                        Html.X().Container().Layout(LayoutType.Column).Height(24).Items(
                            Html.X().DateFieldFor(m => m.CreateAt)
                                    .ID("dtCreateAt")
                                .FieldLabel("Ngày tạo")
                                .ColumnWidth(0.5)
                                .TabIndex(5)
                                .Format("dd/MM/yyyy"),
                            Html.X().TextFieldFor(m => m.CreateByName).ID("txtCreateByName")
                                .FieldLabel("Người tạo").ColumnWidth(0.5).MarginSpec("0 0 0 5")
                                .TabIndex(5)
                        ),
                        Html.X().Container().Layout(LayoutType.Column).Height(24).Items(
                            Html.X().DateFieldFor(m => m.UpdateAt)
                                .ID("dtUpdateAt")
                                .FieldLabel("Ngày sửa")
                                .ColumnWidth(0.5)
                                .TabIndex(5)
                                .Format("dd/MM/yyyy"),
                            Html.X().TextFieldFor(m => m.UpdateByName).ID("txtUpdateByName")
                                .FieldLabel("Người sửa").ColumnWidth(0.5).MarginSpec("0 0 0 5")
                                .TabIndex(5)
                        )
                    )
        )
        .Buttons(Html.X().ButtonExit())
)
