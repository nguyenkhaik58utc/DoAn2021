@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Base
@using iDAS.Utilities
@model iDAS.Items.SystemItem
@(
 Html.X().Window()
    .ID("winDetailCenterSystem")
    .Title("Xem thông tin Hệ thống iDAS")
    .Icon(Icon.Zoom)
    .Width(500)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .ID("frmDetailCenterSystem")
            .Layout(LayoutType.Form)
            .Frame(true)
            .Border(false)
            .StyleSpec("border: none;")
                .FieldDefaults(df => { df.LabelWidth = 100; df.ReadOnly = true; })
            .DefaultAnchor("100%")
            .Items(       
                Html.X().Container()
                    .Layout(LayoutType.Column)                            
                    .Items(               
                        Html.X().TextFieldFor(m => m.Code).FieldLabel("Mã hệ thống")
                            .ID("txtCode")
                            .ColumnWidth(0.7),   
                        Html.X().CheckboxFor(m => m.IsActive)
                            .ID("ckIsActive")
                            .BoxLabel("Kích hoạt")
                            .HideLabel(true)
                            .MarginSpec("0 0 0 10")
                            .ColumnWidth(0.3)
                            ),              
                Html.X().TextFieldFor(m => m.Name)
                    .ID("txtName")
                    .ReadOnly(true)
                    .FieldLabel("Hệ thống")
                       ,
                 Html.X().TextAreaFor(m => m.Url)
                    .ID("txtUrl")
                    .ReadOnly(true).Height(30)
                    .FieldLabel("Url"),

                    Html.X().TextFieldFor(m => m.DBSource).ID("txtDatabaseDataSource")
                            .FieldLabel("DataSource")
                            .MaxLength(50)
        //.Text("192.168.1.111")
                            .TabIndex(3),
                Html.X().TextFieldFor(m => m.DBUserID).ID("txtDatabaseUserID")
                    .FieldLabel("UserID")
                    .MaxLength(50)
        // .Text("sa")
                    .TabIndex(3),
                Html.X().TextFieldFor(m => m.DBPassword).ID("txtDatabasePassword")
                    .InputType(Ext.Net.InputType.Password)
                    .FieldLabel("Password")
                    .TabIndex(3).MaxLength(50),
               Html.X().TextFieldFor(m => m.DocumentFolder).ID("txtDocumentFolder")
                    .FieldLabel("MailHost")
                    .MaxLength(500),
                Html.X().TextFieldFor(m => m.MailHost).ID("txtMailHost")
                        .FieldLabel("MailHost")
                    .MaxLength(50),
                Html.X().NumberFieldFor(m => m.MailPort).ID("MailPort")
                    .FieldLabel("MailPort").MinValue(0)
                    .MaxLength(50),
                Html.X().CheckboxFor(m => m.MailEnableSsl).ID("MailEnableSsl")
                    .FieldLabel("MailEnableSsl"),
                Html.X().TextFieldFor(m => m.MailUserName).ID("txtMailUserName")
                    .FieldLabel("MailUserName")
                    .MaxLength(50),
                Html.X().TextFieldFor(m => m.MailUserPassword).ID("txtMailUserPassword")
                    .InputType(Ext.Net.InputType.Password)
                        .FieldLabel("MailUserPassword")
                    .MaxLength(50),          
                Html.X().TextAreaFor(m => m.Description)
                    .ID("txtDes")                     
                    .FieldLabel("Mô tả")
                )
        )
        .Buttons(

            Html.X().Button()
                .ID("btnCancel")
                .Icon(Icon.Decline)
                .Text("Thoát")
                .TabIndex(8)
                .Handler("App.winDetailCenterSystem.close();")
        )
)
