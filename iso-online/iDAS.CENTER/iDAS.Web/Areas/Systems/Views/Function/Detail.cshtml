@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Base
@using iDAS.Utilities
@model iDAS.Items.FunctionItem

@(
 Html.X().Window()
    .ID("winDetailFunction")
    .Title("Xem chi tiết thông tin Nhóm chức năng")
    .Icon(Icon.Zoom)
    .Width(500)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
        .ID("frmDetailFunction")
        .Layout(LayoutType.Form)
        .Frame(true)
        .Border(false)
        .StyleSpec("border: none;")
        .FieldDefaults(df => { df.LabelWidth = 100; df.ReadOnly = true; })
        .DefaultAnchor("100%")
        .Items(

            Html.X().TextFieldFor(m => m.ID).ID("ID").Hidden(true),
            Html.X().TextFieldFor(m => m.ModuleName).ID("txtModuleName")
                .FieldLabel("Thuộc Module")
            ,
            Html.X().TextFieldFor(m => m.Name).ID("txtName")
                .FieldLabel("Nhóm chức năng")
                .TabIndex(1),         
              Html.X().NumberFieldFor(m => m.Position).ID("txtPos")
                .FieldLabel("Vị trí hiển thị")
                .TabIndex(2)
                ,
            Html.X().TextAreaFor(m => m.Description).ID("txtDes")
                .FieldLabel("Mô tả")
                .TabIndex(2),
                      Html.X().Container().Layout(LayoutType.Column).MarginSpec("0 0 0 105")
                        .Items(

                            Html.X().CheckboxFor(m => m.IsActive).ID("ckIsActive")
                                    .BoxLabel("Kích hoạt").HideLabel(true)
                                ,
                                Html.X().CheckboxFor(m => m.IsShow).HideLabel(true).ID("ckvIsShow")
                                    .BoxLabel("Hiển thị")
                                    .MarginSpec("0 0 0 15")

                                .LabelWidth(120)
                                .MarginSpec("0 0 0 15"),
                                         Html.X().CheckboxFor(m => m.IsDeleted).HideLabel(true).ID("ckIsDeleted")
                                .BoxLabel("Không sử dụng")
                                     .MarginSpec("0 0 0 15")


                        )
                        //,
                        //  Html.X().TextFieldFor(m => m.CreateByName)
                        //                            .FieldLabel("Người tạo")
                        //                            .ReadOnly(true),
                        //                    Html.X().TextFieldFor(m => m.CreateAt)
                        //                            .FieldLabel("Ngày tạo")
                        //                            .ReadOnly(true),
                        //                    Html.X().TextFieldFor(m => m.UpdateByName)
                        //                            .FieldLabel("Người cập nhật")
                        //                            .ReadOnly(true),
                        //                    Html.X().TextFieldFor(m => m.UpdateAt)
                        //                            .FieldLabel("Ngày cập nhật")
                        //                            .ReadOnly(true)

                      )


            )
        .Buttons(

            Html.X().Button()
                .ID("btnCancel")
                .Icon(Icon.Decline)
                .Text("Thoát")
                .TabIndex(2)
                .Handler("App.winDetailFunction.close();")
        )
)
