@using Ext.Net.MVC
@using Ext.Net
@model iDAS.Items.TutorialItem
@(Html.X().Window()
        .ID("winDetail")
        .Title("Chi tiết thông tin trang")
        .Icon(Icon.Pencil)
        .Frame(true)
        .Constrain(true)
        .Width(500)
        .BodyPadding(5)
        .Center()
        .Resizable(false)
        .Modal(true)
        .Items(
            Html.X().FormPanel().DefaultAnchor("100%")
            .ID("frmDetail")
            .Frame(true)
            .Border(false)
            .StyleSpec("border: none;")
            .Items(
                       Html.X().TextFieldFor(m=>m.ModuleName).FieldLabel("Module").ReadOnly(true),
                       Html.X().TextFieldFor(m => m.FunctionName).FieldLabel("Chức năng").ReadOnly(true),
                       Html.X().TextFieldFor(m => m.FileName).FieldLabel("Tệp hướng dẫn").ReadOnly(true) ,
                        Html.X().CheckboxFor(m => m.IsActive).FieldLabel("Sử dụng").ReadOnly(true)
                 )
                 )
            .Buttons(
                    Html.X().Button()
                    .Text("Hủy")
                    .Icon(Icon.Cancel)
                    .OnClientClick("this.up('window').close();")
        )
)