@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web;
@model iDAS.Items.UserItem


@(Html.X().Window()
    .ID("WindowAdd")
    .Title("Tạo mới tài khoản thành viên")
    .Icon(Icon.UserAdd)
    .Width(700)
    .BodyPadding(0)
    .Margin(0)
    .Constrain(true)
    .Layout(LayoutType.Fit)
    .Modal(true)
    .Resizable(false)
    .Items(
        //Html.X().FormPanelForModel()
        //        .FieldDefaults(lb => lb.LabelWidth = 120)
        //        .Frame(true)
        //        .DefaultAnchor("100%")
        //        .BodyPadding(10)
        Html.X().FormPanel()
                    .Layout(LayoutType.Form)
                    .Frame(true)
                    .Border(false)
                    .MarginSpec("0 -4 -3 -4")
                    .StyleSpec("border: none;")
                    .FieldDefaults(df => df.LabelWidth = 100)
                .Items(
                    Html.X().TextFieldFor(m => m.Name).FieldLabel("Họ Tên*:").MarginSpec("0 8 0 8").Width(650),
                    Html.X().TextFieldFor(m => m.Account).FieldLabel("Tài khoản*:").MarginSpec("0 8 0 8").Width(650),
                    Html.X().TextFieldFor(m => m.Password).FieldLabel("Mật khẩu*:").MarginSpec("0 8 0 8").Width(650),
                    Html.X().TextFieldFor(m => m.ConfirmPassword).FieldLabel("Xác nhận mật khẩu:").MarginSpec("0 8 0 8").Width(650),
                    Html.X().TextFieldFor(m => m.Email).FieldLabel("Email*:").MarginSpec("0 8 0 8").Width(650),
                    Html.X().CheckboxFor(m => m.IsActive).FieldLabel("Kích hoạt:").MarginSpec("0 8 0 8").Width(650)

                )
    )

    .Buttons(
        Html.X().Button()
            .Text("Lưu")
            .Icon(Icon.DatabaseSave)
            .Handler("onAdd"),
        Html.X().Button()
            .Text("Đóng")
            .Icon(Icon.DoorOut)
            .Handler("onClosed")
    )
)