@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Base
@using iDAS.Utilities
@model iDAS.Items.RoleItem
@(Html.X().Window()
    .ID("WindowDetailRole")
    .Title("Xem chi tiết chức danh")
    .Icon(Icon.Zoom)
    .BodyPadding(6)
    .Width(450)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Layout(LayoutType.Form)
        .Frame(true)
        .StyleSpec("border: none;")
        .FieldDefaults(d => d.LabelAlign = LabelAlign.Left)
        .ID("FormPanelEdit")
        .Items(
         Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên chức danh").ID("txtname").ReadOnly(true),
             Html.X().TextAreaFor(m => m.Description).FieldLabel("Mô tả").ID("txtDes").Height(100).ReadOnly(true),
             Html.X().CheckboxFor(m => m.IsActive).BoxLabel("Kích hoạt").ID("ckActive").MarginSpec("0 0 0 110").HideLabel(true).ReadOnly(true),
                   Html.X().TextFieldFor(m => m.CreateByName)
                                                            .FieldLabel("Người tạo")
                                                            .ReadOnly(true),
                                                    Html.X().TextFieldFor(m => m.CreateAt)
                                                            .FieldLabel("Ngày tạo")
                                                            .ReadOnly(true),                                                         
                                                    Html.X().TextFieldFor(m => m.UpdateByName)
                                                            .FieldLabel("Người cập nhật")
                                                            .ReadOnly(true),
                                                    Html.X().TextFieldFor(m => m.UpdateAt)
                                                            .FieldLabel("Ngày cập nhật")
                                                            .ReadOnly(true)
                                                            )
         

          )
        .Buttons(
            Html.X().Button()
                .Text("Thoát")
                .Icon(Icon.Cancel)
                .Handler("this.up('window').close();")
      )
)