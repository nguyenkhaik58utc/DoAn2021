@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.LibraryItem

@(Html.X().Window()
    .Title("Thông tin chi tiết thư viện")
    .Icon(Icon.Add)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(1).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).FieldLabel("Chủ đề").ReadOnly(true),
                            Html.X().TextAreaFor(m => m.Description).FieldLabel("Mô tả").Height(80).ReadOnly(true)
                        )
                    ),
                    Html.X().TextFieldFor(m => m.Tags).FieldLabel("Tags").ReadOnly(true),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                    Html.X().CheckboxFor(m => m.IsFirst).ColumnWidth(0.3).HideLabel(false).BoxLabel("Luôn ở đầu").FieldLabel("Hiển thị").ReadOnly(true),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.3).HideLabel(true).BoxLabel("Kích hoạt").ReadOnly(true)
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().DateFieldFor(m => m.RefreshAt).FieldLabel("Ngày đăng").ReadOnly(true).ColumnWidth(0.4)
                    )
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)
