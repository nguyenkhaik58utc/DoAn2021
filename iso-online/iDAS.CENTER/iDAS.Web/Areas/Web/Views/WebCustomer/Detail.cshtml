@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.WebCustomerItem

@(Html.X().Window()
    .Title("Thông tin chi tiết Khách hàng")
    .Icon(Icon.Add)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .FieldDefaults(f => f.LabelWidth = 120)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(0.76).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).AllowBlank(false).BlankText("Bắt buộc nhập !").FieldLabel("Tên Khách hàng").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Email).FieldLabel("Email").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Phone).FieldLabel("Điện thoại").ReadOnly(true),
                            Html.X().TextAreaFor(m => m.Address).FieldLabel("Địa chỉ").Height(50).ReadOnly(true)
                        ),
                        Html.X().Container().ColumnWidth(0.04),
                        Html.X().Container().ColumnWidth(0.2).Layout(LayoutType.Form).Items(
                            Html.X().ImageUploadFieldFor(m => m.Image).ImagePreviewHeight(86).ButtonOnly(true).ReadOnly(true)
                        )
                    ),
                    Html.X().TextAreaFor(m => m.Description).FieldLabel("Mô tả").Height(60).ReadOnly(true),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().NumberFieldFor(m => m.Position).ColumnWidth(0.4).FieldLabel("Vị trí hiển thị").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.4).HideLabel(true).BoxLabel("Kích hoạt").ReadOnly(true)
                    )
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)

