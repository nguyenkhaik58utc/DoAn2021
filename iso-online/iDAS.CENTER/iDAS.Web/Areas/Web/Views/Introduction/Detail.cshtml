@using Ext.Net  ;
@using Ext.Net.MVC ;
@using iDAS.Utilities ;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.IntroItem
@(
 Html.X().Window()
    .ID("winDetailCateSV")
    .Title("Xem chi tiết thông tin Danh mục liên kết")
    .Icon(Icon.Zoom)
    .Maximized(true)
    .Height(1)
    .BodyPadding(5)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .ID("frmDetailCateSV")
            .Layout(LayoutType.Form)
            .Frame(true)
            .Border(false)
            .StyleSpec("border: none;")
             .FieldDefaults(df => df.LabelWidth = 100)
            .DefaultAnchor("100%")
            .Items(
                     Html.X().TextFieldFor(m => m.Title).ID("txtName")
                        .FieldLabel("Tiêu đề")
                        .ReadOnly(true),
                       Html.X().Container().Layout(LayoutType.Column).Items(
                Html.X().CheckboxFor(m => m.IsShow).ColumnWidth(0.5)
                        .FieldLabel("Hiển thị").ReadOnly(true),
                                   Html.X().NumberFieldFor(m => m.Order).ColumnWidth(0.5)
                        .FieldLabel("Thứ tự").ReadOnly(true)
                        ),
                    Html.X().HtmlEditorFor(m => m.Content).LabelAlign(LabelAlign.Top).EnableFont(false)
                            .EnableLinks(true).ID("Content").FieldLabel("Nội dung").Height(340).ReadOnly(true)
            )
        )
        .Buttons(
            Html.X().Button()
                .ID("btnCancel")
                .Icon(Icon.Decline)
                .Text("Thoát")
                .Handler("App.winDetailCateSV.close();")
        )
)