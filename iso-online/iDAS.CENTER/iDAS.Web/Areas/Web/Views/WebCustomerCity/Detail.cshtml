@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.WebCustomerCityItem

@(Html.X().Window()
    .Title("Thông tin chi tiết Tỉnh thành")
    .Icon(Icon.Zoom)
    .Height(300)
    .Constrain(true)
    .Width(500)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .FieldDefaults(f => f.LabelWidth = 120)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(1).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).EmptyText("Tên Tỉnh hoặc Thành phố").AllowBlank(false).BlankText("Bắt buộc nhập !").FieldLabel("Tên Tỉnh thành").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Code).FieldLabel("Mã Tỉnh Thành").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.CountryCode).FieldLabel("Mã Quốc gia").ReadOnly(true)
                        )
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.4).HideLabel(false).FieldLabel("Kích hoạt").ReadOnly(true)
                    )
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)

