@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.FaqQuestionItem

@(Html.X().Window()
    .Title("Thông tin chi tiết câu hỏi")
    .Icon(Icon.Zoom)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().TextAreaFor(m => m.Question).FieldLabel("Câu hỏi").Height(120).ReadOnly(true),
                    Html.X().NumberFieldFor(m => m.Position).FieldLabel("Thứ tự hiển thị").ReadOnly(true),
                    Html.X().CheckboxFor(m => m.IsActive).Value(true).FieldLabel("Kích hoạt").ReadOnly(true)
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)
