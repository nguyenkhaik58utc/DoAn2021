@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.FaqAnswerItem

@(Html.X().Window()
    .Title("Thông tin chi tiết câu trả lời")
    .Icon(Icon.Zoom)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    //Html.X().TextAreaFor(m => m.Answer).AllowBlank(false).BlankText("Chủ đề bắt buộc nhập !").FieldLabel("Câu trả lời").Height(120).ReadOnly(true),
                    Html.X().HtmlEditorFor(m => m.Answer).FieldLabel("Câu trả lời").ReadOnly(true),
                    Html.X().NumberFieldFor(m => m.Position).FieldLabel("Thứ tự hiển thị").ReadOnly(true),
                    Html.X().CheckboxFor(m => m.IsActive).Value(true).FieldLabel("Kích hoạt").ReadOnly(true)
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)
