@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.ServiceProgramItem

@(Html.X().Window()
    .Title("Thông tin chi tiết chương trình")
    .Icon(Icon.Zoom)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(0.76).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).FieldLabel("Chủ đề").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Address).FieldLabel("Địa điểm").ReadOnly(true),
                            Html.X().Container().Layout(LayoutType.Column).Items(
                                Html.X().TextFieldFor(m => m.Duration).FieldLabel("Trong thời gian").ColumnWidth(0.5).ReadOnly(true),
                                Html.X().Container().ColumnWidth(0.05),
                                Html.X().NumberFieldFor(m => m.Price).FieldLabel("Chi phí").ColumnWidth(0.45).ReadOnly(true)
                            ),
                            Html.X().Container().Layout(LayoutType.Column).Items(
                                Html.X().DateFieldFor(m => m.RefreshAt).FieldLabel("Ngày đăng").ColumnWidth(0.5).ReadOnly(true),
                                Html.X().Container().ColumnWidth(0.1)
                            ),
                            Html.X().TextFieldFor(m => m.Note).FieldLabel("Ghi chú").ReadOnly(true)
                        ),
                        Html.X().Container().ColumnWidth(0.04),
                        Html.X().Container().ColumnWidth(0.2).Layout(LayoutType.Form).Items(
                            Html.X().ImageUploadFieldFor(m => m.Image).ImagePreviewHeight(86).ButtonOnly(true).ReadOnly(true)
                        )
                    ),
                    Html.X().TextFieldFor(m => m.Tags).FieldLabel("Tags").ReadOnly(true),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().DateFieldFor(m => m.StartAt).FieldLabel("Bắt đầu").ColumnWidth(0.45).ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().DateFieldFor(m => m.EndAt).FieldLabel("Kết thúc").ColumnWidth(0.45).ReadOnly(true)
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().CheckboxFor(m => m.IsFirst).ColumnWidth(0.4).HideLabel(false).FieldLabel("Hiển thị").BoxLabel("Luôn ở đầu").ReadOnly(true),
                        Html.X().CheckboxFor(m => m.IsNew).ColumnWidth(0.2).HideLabel(true).BoxLabel("Mới").ReadOnly(true),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.2).HideLabel(true).BoxLabel("Kích hoạt").ReadOnly(true)
                    )
                ),
                Html.X().Panel().Title("Nội dung").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Fit)
                .Items(
                    Html.X().HtmlEditorFor(m => m.Html).HideLabel(true).ReadOnly(true)
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)


