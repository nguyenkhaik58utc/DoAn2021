@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.ProductScopeItem

@(Html.X().Window()
    .Title("Thông tin chi tiết lĩnh vực ngành nghề")
    .Icon(Icon.Zoom)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(1).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.NaceCodes).AllowBlank(false).BlankText("Bắt buộc nhập !").FieldLabel("Lĩnh vực").ReadOnly(true),
                            Html.X().TextAreaFor(m => m.Description).ID("Description").FieldLabel("Mô tả").Height(80).ReadOnly(true)
                        )
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().NumberFieldFor(m => m.Factory).ColumnWidth(0.4).FieldLabel("Hệ số").ReadOnly(true)
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().CheckboxFor(m => m.IsProduction).ColumnWidth(0.4).BoxLabel("Sản xuất").FieldLabel("Loại hình").ReadOnly(true),
                        Html.X().CheckboxFor(m => m.IsService).ColumnWidth(0.3).BoxLabel("Dịch vụ").HideLabel(true).ReadOnly(true),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.3).BoxLabel("Kích hoạt").HideLabel(true).ReadOnly(true)
                    )
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)
