@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.WebCustomerContactItem

@(Html.X().Window()
    .Title("Thông tin chi tiết liên hệ khách hàng")
    .Icon(Icon.Zoom)
    .Height(300)
    .Constrain(true)
    .Width(500)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .FieldDefaults(f => f.LabelWidth = 120)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(1).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).FieldLabel("Tên khách hàng").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Email).FieldLabel("Email liên hệ").ReadOnly(true),
                            Html.X().TextAreaFor(m => m.Content).FieldLabel("Nội dung liên hệ").Height(100).ReadOnly(true)
                        )
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().CheckboxFor(m => m.IsRead).ColumnWidth(0.4).HideLabel(false).BoxLabel("Đã đọc").FieldLabel("Liên hệ").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().CheckboxFor(m => m.IsSent).ColumnWidth(0.4).HideLabel(true).BoxLabel("Đã liên hệ lại").ReadOnly(true)
                    )
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)

