@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.RecruimentItem

@(Html.X().Window()
    .Title("Thông tin chi tiết tuyển dụng")
    .Icon(Icon.Zoom)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(0.76).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Title).AllowBlank(false).BlankText("Bắt buộc nhập !").FieldLabel("Chủ đề").ReadOnly(true),
                            Html.X().TextAreaFor(m => m.Description).FieldLabel("Mô tả").Height(80).ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Address).FieldLabel("Khu vực").ReadOnly(true)
                        ),
                        Html.X().Container().ColumnWidth(0.04),
                        Html.X().Container().ColumnWidth(0.2).Layout(LayoutType.Form).Items(
                            Html.X().ImageUploadFieldFor(m => m.Image).ImagePreviewHeight(86).ButtonOnly(true).ReadOnly(true)
                        )
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().DateFieldFor(m => m.RefreshAt).ColumnWidth(0.5).FieldLabel("Ngày đăng").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().NumberFieldFor(m => m.Quatity).ColumnWidth(0.4).FieldLabel("Số lượng").ReadOnly(true)
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().DateFieldFor(m => m.FinishAt).ColumnWidth(0.5).FieldLabel("Ngày kết thúc").Value(DateTime.Now).ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().TextFieldFor(m => m.Role).ColumnWidth(0.4).FieldLabel("Chức danh")                       
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().CheckboxFor(m => m.IsFirst).ColumnWidth(0.4).FieldLabel("Hiển thị").BoxLabel("Luôn ở trang đầu").ReadOnly(true),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.2).HideLabel(true).BoxLabel("Kích hoạt").ReadOnly(true),
                        Html.X().NumberFieldFor(m => m.TotalView).ColumnWidth(0.4).FieldLabel("Lượt xem").ReadOnly(true)
                    )
                ),
                Html.X().Panel().Title("Nội dung").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Fit)
                .Items(
                    Html.X().HtmlEditorFor(m => m.Html).ReadOnly(true)
                ),
                Html.X().Panel().Title("Liên hệ").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().TextFieldFor(m => m.ContactName).FieldLabel("Người liên hệ").ReadOnly(true),
                    Html.X().TextFieldFor(m => m.ContactPhone).FieldLabel("Số điện thoại").ReadOnly(true),
                    Html.X().TextFieldFor(m => m.ContactMail).FieldLabel("Email liên hệ").ReadOnly(true)
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)
                
