@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.AuditorItem

@(Html.X().Window()
    .Title("Thông tin chi tiết chuyên gia")
    .Icon(Icon.Zoom)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(0.76).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).FieldLabel("Họ tên").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Role).FieldLabel("Chức danh").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Scope).FieldLabel("Lĩnh vực").ReadOnly(true),
                            Html.X().TextAreaFor(m => m.Description).FieldLabel("Mô tả").Height(55).ReadOnly(true)
                        ),
                        Html.X().Container().ColumnWidth(0.04),
                        Html.X().Container().ColumnWidth(0.2).Layout(LayoutType.Form).Items(
                            Html.X().ImageUploadFieldFor(m => m.Image).ImagePreviewHeight(86).ButtonOnly(true).ReadOnly(true)
                        )
                    ),
                    Html.X().TextFieldFor(m => m.Tags).FieldLabel("Tags").ReadOnly(true),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().NumberFieldFor(m => m.YearOfExperience).ColumnWidth(0.3).FieldLabel("Năm kinh nghiệm").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.04),
                        Html.X().NumberFieldFor(m => m.Position).ColumnWidth(0.3).FieldLabel("Vị trí hiển thị").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.06),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.3).HideLabel(true).BoxLabel("Kích hoạt").ReadOnly(true)
                    )
                ),
                Html.X().Panel().Title("Hồ sơ").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Fit)
                .Items(
                    Html.X().HtmlEditorFieldFor(m => m.Profile).ReadOnly(true)
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)

