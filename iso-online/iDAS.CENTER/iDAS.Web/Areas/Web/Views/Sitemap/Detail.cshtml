@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web;
@using iDAS.Web.ExtExtend;
@using iDAS.Utilities;
@model iDAS.Items.SitemapItem

@(Html.X().Window()
    .Title("Thông tin chi tiết trang trên sơ đồ website")
    .Icon(Icon.Zoom)
    .Width(700)
    .Height(400)
    .Modal(true)
    .Maximizable(true)
    .Constrain(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(0.76).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Text).FieldLabel("Tên trang").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Tooltip).FieldLabel("Chú thích").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Url).FieldLabel("Url").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Layout).FieldLabel("Layout").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Script).FieldLabel("Script").ReadOnly(true)
                        ),
                        Html.X().Container().ColumnWidth(0.04),
                        Html.X().Container().ColumnWidth(0.2).Layout(LayoutType.Form).Items(
                            Html.X().ImageUploadFieldFor(m => m.Image).ImagePreviewHeight(80).ButtonOnly(true).ReadOnly(true)
                        )
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().CheckboxFor(m => m.IsMenuRight).BoxLabel("Menu phải").HideLabel(false).ColumnWidth(0.3).FieldLabel("Hiển thị").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().CheckboxFor(m => m.IsMenuTop).BoxLabel("Menu trên").HideLabel(true).ColumnWidth(0.3).ReadOnly(true)
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().NumberFieldFor(m => m.Position).ColumnWidth(0.5).FieldLabel("Thứ tự hiển thị").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().CheckboxFor(m => m.IsActive).BoxLabel("Kích hoạt").HideLabel(true).ColumnWidth(0.3).ReadOnly(true)
                    ),
                    Html.X().CheckboxFor(m => m.IsPageDynamic).BoxLabel("Trang web động").FieldLabel("Loại trang").ColumnWidth(0.4).ReadOnly(true)
                ),
                Html.X().Panel().Title("Nội dung trang Web").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Fit)
                .Items(
                    Html.X().HtmlEditorFieldFor(m => m.Html).ReadOnly(true)
                )
            )
        )
    )
    .Buttons(
        Html.X().ButtonExit()
    )
)
