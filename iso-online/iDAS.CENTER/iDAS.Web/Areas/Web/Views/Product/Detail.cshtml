@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.ProductItem

@(Html.X().Window()
    .Title("Thông tin chi tiết sản phẩm")
    .Icon(Icon.Zoom)
    .Height(370)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().HiddenFor(m => m.ID),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(0.76).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).AllowBlank(false).FieldLabel("Sản phẩm").ReadOnly(true),
                            Html.X().TextAreaFor(m => m.Description).ID("Description").FieldLabel("Mô tả").Height(80).ReadOnly(true),
                            Html.X().Container().Layout(LayoutType.Column).Items(
                                Html.X().DateFieldFor(m => m.PublicAt).FieldLabel("Ngày công bố").ColumnWidth(0.5).ReadOnly(true),
                                Html.X().Container().ColumnWidth(0.1),
                                Html.X().TextFieldFor(m => m.Version).FieldLabel("Phiên bản").ColumnWidth(0.4).ReadOnly(true)
                            )
                        ),
                        Html.X().Container().ColumnWidth(0.04),
                        Html.X().Container().ColumnWidth(0.2).Layout(LayoutType.Form).Items(
                            Html.X().ImageUploadFieldFor(m => m.Image).ImagePreviewHeight(86).ButtonOnly(true).ReadOnly(true)
                        )
                    ),
                    Html.X().SitemapFieldFor(m => m.Sitemap).ReadOnly(true),
                    Html.X().TextFieldFor(m => m.Tags).FieldLabel("Tags").ReadOnly(true),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().NumberFieldFor(m => m.Rate).ColumnWidth(0.3).FieldLabel("Đánh giá").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().NumberFieldFor(m => m.TotalRegister).ColumnWidth(0.3).FieldLabel("Số đăng ký").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.2).HideLabel(true).BoxLabel("Kích hoạt").ReadOnly(true)
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().NumberFieldFor(m => m.Position).FieldLabel("Thứ tự hiển thị").ColumnWidth(0.4).ReadOnly(true)
                    )
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)

