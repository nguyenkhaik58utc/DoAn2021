@using Ext.Net.MVC
@using Ext.Net
@model iDAS.Items.LibraryCategoryItem

@(Html.X().Window()
    .Title("Thông tin chi tiết Danh mục thư viện")
    .Icon(Icon.Zoom)
    .Frame(true)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .BodyPadding(5)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Form)
        .Items(
            Html.X().HiddenFor(m => m.ID),
            Html.X().TextFieldFor(m => m.Name).ID("Name").FieldLabel("Tên danh mục").ReadOnly(true),
            Html.X().TextAreaFor(m => m.Description).ID("Description").FieldLabel("Mô tả").Height(80).ReadOnly(true),
            Html.X().CheckboxFor(m => m.IsActive).FieldLabel("Kích hoạt").ReadOnly(true),
            Html.X().TextFieldFor(m => m.Position).FieldLabel("Vị trí").ReadOnly(true)
        )
        .Buttons(
            Html.X().Button()
            .Text("Thoát")
            .Icon(Icon.Cancel)
            .OnClientClick("this.up('window').close();")
        )
    )
)
