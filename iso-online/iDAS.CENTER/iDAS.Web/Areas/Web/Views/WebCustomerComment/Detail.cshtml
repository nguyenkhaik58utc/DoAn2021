@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.WebCustomerCommentItem

@(Html.X().Window()
    .Title("Thông tin chi tiết ý kiến đánh giá")
    .Icon(Icon.Add)
    .Height(380)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .FieldDefaults(f => f.LabelWidth = 120)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(0.76).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).EmptyText("Tên Khách hàng").FieldLabel("Tên Khách hàng").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Email).FieldLabel("Email").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Phone).FieldLabel("Điện thoại").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Role).FieldLabel("Chức danh").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Company).FieldLabel("Đơn vị").ReadOnly(true)
                        ),
                        Html.X().Container().ColumnWidth(0.04),
                        Html.X().Container().ColumnWidth(0.2).Layout(LayoutType.Form).Items(
                            Html.X().ImageUploadFieldFor(m => m.Image).ImagePreviewHeight(86).ButtonOnly(true).ReadOnly(true)
                        )
                    ),
                    Html.X().TextAreaFor(m => m.Comment).FieldLabel("Ý kiến đánh giá").Height(60).ReadOnly(true),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().DateFieldFor(m => m.RefreshAt).ColumnWidth(0.45).FieldLabel("Ngày đánh giá").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.15),
                        Html.X().CheckboxFor(m => m.IsFirst).ColumnWidth(0.2).HideLabel(true).BoxLabel("Luôn ở đầu").ReadOnly(true),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.2).HideLabel(true).BoxLabel("Kích hoạt").ReadOnly(true)
                    )
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)

