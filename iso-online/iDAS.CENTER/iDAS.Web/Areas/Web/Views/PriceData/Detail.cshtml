@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Base
@using iDAS.Utilities
@model iDAS.Items.PriceDataSizeItem
@(
 Html.X().Window()
    .ID("winDetailPriceDataSize")
    .Title("Xem chi tiết thông tin gói dung lượng")
    .Icon(Icon.Zoom)
    .Width(550)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
        Html.X().FormPanel()
            .ID("frmDetailPriceDataSize")
            .Layout(LayoutType.Form)
            .Frame(true)
            .Border(false)
            .StyleSpec("border: none;")
            .FieldDefaults(df => df.LabelWidth = 120)
            .DefaultAnchor("100%")
            .Items(

                              Html.X().TextFieldFor(m => m.Name).ID("txtName").ReadOnly(true)
                            .FieldLabel("Tên gói")
                            .AllowBlank(false).BlankText("Tên gói dung lượng bắt buộc nhập!"),
                                      Html.X().NumberFieldFor(m => m.Value).MinValue(0.3).ReadOnly(true).AllowDecimals(true)
                                            .ID("Value")
                                        .AllowBlank(false)
                            .FieldLabel("Giá trị(GB)"),
                            Html.X().NumberFieldFor(m => m.Price).AllowDecimals(true).MinValue(0).ReadOnly(true)
                            .FieldLabel("Giá(VNĐ)"),
                               Html.X().TextAreaFor(m => m.Description).ReadOnly(true)
                            .FieldLabel("Ghi chú")
                
        )
        )
        .Buttons(            
            Html.X().Button()
                .ID("btnCancel")
                .Icon(Icon.Decline)
                .Text("Thoát")
                .Handler("App.winDetailPriceDataSize.close();")
        )
)