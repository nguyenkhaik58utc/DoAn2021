@using Ext.Net.MVC
@using Ext.Net
@using iDAS.Web.ExtExtend
@model iDAS.Items.RecruimentProfileItem

@(Html.X().Window()
    .Title("Thông tin chi tiết hồ sơ ứng tuyển")
    .Icon(Icon.Zoom)
    .Height(350)
    .Constrain(true)
    .Width(700)
    .Center()
    .Resizable(false)
    .Modal(true)
    .Maximizable(true)
    .Layout(LayoutType.Fit)
    .Items(
        Html.X().FormPanel()
        .Frame(true)
        .Border(false)
        .Padding(1)
        .StyleSpec("border: none;")
        .Layout(LayoutType.Fit)
        .Items(
            Html.X().TabPanel()
            .Items(
                Html.X().Panel().Title("Thông tin").Frame(true).StyleSpec("border: none; border-radius:0")
                .Layout(LayoutType.Form)
                .Items(
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().Container().ColumnWidth(1).Layout(LayoutType.Form).Items(
                            Html.X().TextFieldFor(m => m.Name).FieldLabel("Họ tên").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Email).FieldLabel("Email").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Phone).FieldLabel("Điện thoại").ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Address).FieldLabel("Địa chỉ").ReadOnly(true)
                        )
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().DateFieldFor(m => m.CreateAt).ColumnWidth(0.4).FieldLabel("Ngày nộp hồ sơ").ReadOnly(true),
                        Html.X().Container().ColumnWidth(0.1),
                        Html.X().CheckboxFor(m => m.IsActive).ColumnWidth(0.3).HideLabel(true).BoxLabel("Kích hoạt").ReadOnly(true)
                    ),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                        Html.X().TextFieldFor(m => m.File.Name).FieldLabel("Tệp đính kèm").ColumnWidth(0.8),
                        Html.X().Button().Text("Tải tệp xuống").Icon(Icon.ArrowDown).ColumnWidth(0.2)
                        .Href(Url.Action("DownloadFile", "File", new { area = "", fileId = Model.File.ID }))
                    )
                )
            )
        )
    )
    .Buttons(
        Html.X().Button()
        .Text("Thoát")
        .Icon(Icon.Cancel)
        .OnClientClick("this.up('window').close();")
    )
)
                
