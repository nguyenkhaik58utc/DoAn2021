@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Base
@using iDAS.Utilities
@model iDAS.Items.ISONaceCodeItem
@(
 Html.X().Window()
    .ID("winDetailISONaceCode")
    .Title("Xem thông tin lĩnh vực ngành nghề")
    .Icon(Icon.Zoom)
         .Width(500)
        .BodyPadding(5)
        .Modal(true)
        .Constrain(true)
        .Resizable(false)
        .Items(
                Html.X().FormPanel()
                    .ID("frmEditISONaceCode")
                    .Layout(LayoutType.Form)                         
                    .Frame(true)
                    .Border(false)
                    .StyleSpec("border: none;")
                    .FieldDefaults(df => df.LabelWidth = 130)
                    .DefaultAnchor("100%")
                    .Items(
                            Html.X().TextFieldFor(m => m.Code).FieldLabel("Mã ngành nghề")
                                    .ReadOnly(true),
                            Html.X().TextFieldFor(m => m.Name)
                                    .LabelWidth(130)
                                    .FieldLabel("Lĩnh vực ngành nghề")
                                    .ReadOnly(true),
                            Html.X().CheckboxFor(m => m.IsActive).BoxLabel("Kích hoạt").FieldLabel("Trạng thái").ReadOnly(true)
                          )
            )
        .Buttons(Html.X().Button()
                    .Icon(Icon.Decline)
                    .Text("Thoát")
                    .TabIndex(8)
                    .Handler("App.winDetailISONaceCode.close();")
                )
)
