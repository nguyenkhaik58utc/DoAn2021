@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Base
@model iDAS.Items.ISOClauseItem
@(
 Html.X().Window()
    .ID("winDetailIsoStandard")
    .Title("Xem chi tiết thông tin Tiêu chuẩn Iso")
    .Icon(Icon.Zoom)
    .Width(1000)
    .BodyPadding(5)
    .Modal(true)
    .Resizable(false)
    .Items(
    Html.X().FormPanel()
        .ID("frmDetailIsostandard")
        .Layout(LayoutType.Form)
        .Frame(true)
        .Border(false)
        .StyleSpec("border: none;")
        .FieldDefaults(df => { df.LabelWidth = 120; df.ReadOnly = true; })
        .DefaultAnchor("100%")
        .Items(

            Html.X().TextFieldFor(m => m.IsoName).ID("cboIso")
                .TabIndex(1)
                .FieldLabel("Iso")

                 ,
            Html.X().TextFieldFor(m => m.Index).ID("txtIndex")
                .FieldLabel("Điều khoản")
                .TabIndex(2)
              ,
            Html.X().CheckboxFor(m => m.IsActive).ID("ckActive")
                .FieldLabel("Kích hoạt")
                .TabIndex(3),
            Html.X().TextFieldFor(m => m.Name).ID("txtName")
                .FieldLabel("Tiêu chuẩn")
                .TabIndex(4)
           ,
                 
            Html.X().HtmlEditorFor(m => m.Note).ID("txtNote").EnableFont(false)
                .FieldLabel("Nội dung")
                .TabIndex(5)
                .Height(350)

        //
        ))
        .Buttons(

            Html.X().Button()
                .ID("btnCancel")
                .Icon(Icon.Cancel)
                .Text("Hủy")
                .TabIndex(7)
                .Handler("App.winDetailIsoStandard.close();")
        )
)