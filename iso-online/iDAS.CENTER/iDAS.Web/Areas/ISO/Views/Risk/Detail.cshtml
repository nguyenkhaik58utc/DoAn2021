@using Ext.Net;
@using Ext.Net.MVC;
@using iDAS.Web.ExtExtend;
@model iDAS.Items.RiskItem
@{
    var X = Html.X();
}
@(Html.X().Window().ItemID("windowId")
    .BodyPadding(0)
    .Width(550)
    .Constrain(true)
    .Modal(true)
    .Layout(LayoutType.Fit)
    .Maximizable(true)
    .ID("winRiskMethod")
    .Title("Xem chi tiết thông tin rủi ro")
    .Icon(Icon.Zoom)
    .Items(
            X.CustomFormPanel().ID("frmDetail")
                .FieldDefaults(lf => { lf.LabelWidth = 80; lf.ReadOnly = true; })
                .Items(
                        X.HiddenFor(m=>m.CenterRiskCategoryID).ID("hdfRiskCategoryID"),
                        X.TextFieldFor(m => m.RiskCategoryName).ReadOnly(true).FieldLabel("Nhóm rủi ro"),
                        X.TextFieldFor(m => m.Name).FieldLabel("Tên rủi ro")
                                .EmptyText("Nhập tên rủi ro..."),
                        X.TextAreaFor(m => m.Weakness).FieldLabel("Điểm yếu")
                                .EmptyText("Nhập điểm yếu...").Height(80),                   
                        X.TextAreaFor(m => m.Description).FieldLabel("Mô tả")
                                .EmptyText("Nhập mô tả kiểm soát rủi ro...").Height(80)
                    )
            )  
    .Buttons(
               Html.X().ButtonExit()
            )
)
