@using Ext.Net
@using Ext.Net.MVC
@using iDAS.Base
@using iDAS.Utilities
@{
    var X = Html.X();
}
@model iDAS.Items.CustomerSystemItem
@(Html.X().Window()
    .ID("winDetail")
    .Title("Xem chi tiết thông tin khách hàng hệ thống")
    .Width(600)
    .Icon(Icon.Pencil).Frame(true).Constrain(true).BodyPadding(5).Center().Modal(true).Maximizable(true)
    .Items(
        Html.X().FormPanel().DefaultAnchor("100%")
            .FieldDefaults(lb => { lb.LabelWidth = 100; lb.ReadOnly = true; })
            .ID("frmDetail")
            .Frame(true)
            .Border(false)
            .StyleSpec("border: none;")
            .Items(
                Html.X().Container().Layout(LayoutType.Column).Items(
                    Html.X().Container().Layout(LayoutType.Form).ColumnWidth(0.8).Items(
                        X.TextFieldFor(m => m.Name).FieldLabel("Tên khách hàng:"),
                        X.TextFieldFor(m => m.Company).FieldLabel("Tên công ty:"),
                        X.TextFieldFor(m => m.Email).FieldLabel("Email:"),
                        X.TextFieldFor(m => m.Phone).FieldLabel("Điện thoại:"),
                        X.TextFieldFor(m => m.Code).FieldLabel("Mã iDAS cấp:"),
                        X.CheckboxFor(m => m.IsActive).FieldLabel("Kích hoạt:").ReadOnly(true)
                    ),
                    Html.X().Container().Layout(LayoutType.Fit).ColumnWidth(0.2).MarginSpec("4 0 0 5").Items(
                        Html.X().ImageButton().ID("imgAvatar").Height(50).ImageUrl(Model.LogoUrl)
                        )),
                    X.TextAreaFor(m => m.Address).ReadOnly(true).FieldLabel("Địa chỉ:").Height(50),
                    Html.X().Container().Layout(LayoutType.Column).MarginSpec("0 0 5 0")
                        .Items(
                        X.DateFieldFor(m => m.AcceptAt).FieldLabel("Ngày xác nhận").ColumnWidth(0.5),
                            X.TextFieldFor(m => m.AcceptBy).FieldLabel("Người xác nhận").ColumnWidth(0.5).MarginSpec("0 0 0 5")

                        ),   
                    //Html.X().Container().Layout(LayoutType.Column)
                    //.MarginSpec("0 0 5 0")
                    //.Items(
                    //    X.DateFieldFor(m => m.UpdateAt).FieldLabel("Ngày cập nhật").ColumnWidth(0.5),
                    //    X.TextFieldFor(m => m.Updateby).FieldLabel("Người cập nhật").ColumnWidth(0.5).MarginSpec("0 0 0 5")
                    
                    //),
                    Html.X().Container().Layout(LayoutType.Column).Items(
                       X.DateFieldFor(m => m.ActiveAt).FieldLabel("Ngày kích hoạt").ColumnWidth(0.5),
                       X.TextFieldFor(m => m.ActiveBy).FieldLabel("Người kích hoạt").ColumnWidth(0.5).MarginSpec("0 0 0 5")

                    )           
                    
                )
        )
        .Buttons(
            Html.X().Button()
                .Text("Thoát")
                .Icon(Icon.Decline)
                .OnClientClick("this.up('window').close();")
            )
)